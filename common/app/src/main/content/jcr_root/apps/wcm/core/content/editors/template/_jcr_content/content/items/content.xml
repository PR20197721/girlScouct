<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:vlt="http://www.day.com/jcr/vault/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[vlt:FullCoverage]"
    jcr:primaryType="sling:OrderedFolder"
    sling:resourceType="cq/gui/components/authoring/editorpanel"
    default="{Boolean}true"
    id="Content">
    <header
        jcr:primaryType="nt:unstructured"
        class="editor-GlobalBar js-editor-PanelHeader">
        <items jcr:primaryType="nt:unstructured">
            <headerbar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/headerbar"
                class="header-main">
                <items jcr:primaryType="nt:unstructured">
                    <togglesidepanel
                        granite:class="toggle-sidepanel editor-GlobalBar-item js-editor-SidePanel-toggle"
                        granite:title="Toggle Side Panel"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="left"
                        disabled="{Boolean}true"
                        icon="railLeft"
                        iconSize="S"
                        variant="minimal"/>
                    <pageinfo
                        granite:class="editor-GlobalBar-item foundation-toggleable-control"
                        granite:id="pageinfo-trigger"
                        granite:title="Page Information"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/anchorbutton"
                        align="left"
                        hideText="{Boolean}true"
                        href="#pageinfo-popover"
                        icon="properties"
                        iconSize="S"
                        text="Page Information"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            foundation-toggleable-control-target="#pageinfo-popover"/>
                    </pageinfo>
                    <pageinfopopover
                        granite:class="pageinfo"
                        granite:id="pageinfo-popover"
                        granite:title="Page Information"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/popover">
                        <items jcr:primaryType="nt:unstructured">
                            <list
                                granite:id="pageinfo-data"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/pageinfo/list">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/list"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <properties
                                        granite:title="Initial Page Properties"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/pageinfo/properties"
                                        text="Initial Page Properties">
                                        <granite:rendercondition
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/renderconditions/canmodify"
                                            path="${requestPathInfo.suffix}"/>
                                    </properties>
                                    <pagepolicy
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/pageinfo/policy"
                                        text="Page Design">
                                        <rendercondition
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/renderconditions/canmodify"
                                            path="${requestPathInfo.suffix}"/>
                                    </pagepolicy>
                                    <publish
                                        granite:class="js-editor-PageInfo-closePopover editor-PageInfo-action cq-authoring-actions-quickpublish-activator"
                                        granite:title="Publish Template"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        text="Publish Template">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            path="${requestPathInfo.suffix}"
                                            references-url="${granite:url(&quot;/libs/wcm/core/content/reference.json&quot;)}"
                                            replication-url="${granite:url(&quot;/bin/replicate.json&quot;)}"
                                            url="${granite:url(&quot;/libs/wcm/core/content/sites/publishpagewizard.html&quot;)}"/>
                                        <granite:rendercondition
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/renderconditions/and">
                                            <canreplicate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/renderconditions/canreplicate"
                                                path="${requestPathInfo.suffix}"/>
                                            <not
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/renderconditions/not">
                                                <islaunchresource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/renderconditions/islaunchresource"
                                                    path="${requestPathInfo.suffix}"/>
                                            </not>
                                        </granite:rendercondition>
                                    </publish>
                                    <viewinadmin
                                        granite:class="js-editor-PageInfo-closePopover editor-PageInfo-action pageinfo-adminview"
                                        granite:title="View in Admin"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        text="View in Admin">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            adminurl="/libs/wcm/core/content/sites/templates.html"
                                            path="${granite:encodeURIPath(granite:relativeParent(requestPathInfo.suffix, 4))}"/>
                                    </viewinadmin>
                                    <help
                                        granite:class="js-editor-PageInfo-closePopover editor-PageInfo-action editor-shell-onboarding-trigger"
                                        granite:title="Help"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        text="Help"/>
                                </items>
                            </list>
                        </items>
                    </pageinfopopover>
                    <styleselector
                        granite:class="editor-GlobalBar-item js-editor-StyleSelector-toggle foundation-toggleable-control"
                        granite:title="Styles"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="left"
                        disabled="{Boolean}true"
                        hideText="{Boolean}true"
                        icon="brush"
                        iconSize="S"
                        text="Styles"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            foundation-toggleable-control-target="#editor-StyleSelector--page"/>
                        <granite:rendercondition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/renderconditions/and">
                            <styleselector
					            jcr:primaryType="nt:unstructured"
					            sling:resourceType="granite/ui/components/foundation/renderconditions/privilege"
								path="/etc/renderconditions/features/content/editor/styleselector"
						        privileges="[jcr:read]"/>
                            <canModify
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/renderconditions/canmodify"
                                path="${requestPathInfo.suffix}"/>
                            <hasAllowedStyles
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/renderconditions/hasallowedstyles"
                                path="${requestPathInfo.suffix}"/>
                        </granite:rendercondition>
                    </styleselector>
                    <styleselectorpopover
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/styleselector"
                        type="page"/>
                    <undo
                        granite:class="cq-History-control editor-GlobalBar-item hide"
                        granite:title="Undo"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="left"
                        hideText="{Boolean}true"
                        icon="undo"
                        text="Undo"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            history-control="undo"/>
                    </undo>
                    <redo
                        granite:class="cq-History-control editor-GlobalBar-item hide"
                        granite:title="Redo"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="left"
                        hideText="{Boolean}true"
                        icon="redo"
                        text="Redo"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            history-control="redo"/>
                    </redo>
                    <emulator
                        granite:class="editor-GlobalBar-item js-editor-EmulatorBar-toggle"
                        granite:title="Emulator"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="left"
                        disabled="{Boolean}true"
                        icon="devices"
                        iconSize="S"
                        variant="minimal"/>
                    <preview
                        granite:class="editor-GlobalBar-item js-editor-LayerSwitcherTrigger editor-GlobalBar-previewTrigger js-editor-GlobalBar-previewTrigger"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="right"
                        text="Preview"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            layer="Preview"/>
                    </preview>
                    <selectlayer
                        granite:class="editor-GlobalBar-item foundation-toggleable-control editor-GlobalBar-layerSwitcher"
                        granite:title="Select another mode"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/anchorbutton"
                        align="right"
                        href="#selectlayer-popover"
                        icon="chevronDown"
                        iconSize="XS"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            foundation-toggleable-control-target="#selectlayer-popover"/>
                    </selectlayer>
                    <currentlayer
                        granite:class="editor-GlobalBar-item js-editor-GlobalBar-layerCurrent editor-GlobalBar-layerCurrent js-editor-LayerSwitcherTrigger"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        align="right"
                        text="Edit"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            layer="Edit"/>
                    </currentlayer>
                    <selectlayerpopover
                        granite:id="selectlayer-popover"
                        granite:title="Select another mode"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/popover">
                        <items jcr:primaryType="nt:unstructured">
                            <buttonlist
                                granite:class="editor-GlobalBar-popoverContent editor-GlobalBar-layerSwitcherPopoverContent"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"/>
                        </items>
                    </selectlayerpopover>
                </items>
            </headerbar>
            <statusbar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/statusbar"
                statusType="template-editor"/>
            <emulatorbar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/emulatorbar">
                <items jcr:primaryType="nt:unstructured">
                    <opendevicepopover
                        granite:class="foundation-toggleable-control"
                        granite:title="Select device"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        hideText="{Boolean}true"
                        icon="deviceDesktop"
                        iconSize="S"
                        text="Select device"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            foundation-toggleable-control-target="#js-editor-EmulatorDevicePopover"/>
                    </opendevicepopover>
                    <rotate
                        granite:class="js-EmulatorDeviceRotate editor-EmulatorDeviceRotate"
                        granite:title="Rotate device"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        hideText="{Boolean}true"
                        icon="deviceRotatePortrait"
                        iconSize="S"
                        text="Rotate device"
                        variant="minimal">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            device="native"/>
                    </rotate>
                </items>
            </emulatorbar>
            <devicepopover
                granite:id="js-editor-EmulatorDevicePopover"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/popover">
                <items jcr:primaryType="nt:unstructured">
                    <list
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/emulatordevicelist"/>
                </items>
            </devicepopover>
        </items>
    </header>
    <content
        jcr:primaryType="nt:unstructured"
        id="ContentScrollView">
        <items jcr:primaryType="nt:unstructured">
            <contentwrapper
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/contentwrapper"/>
            <overlaywrapper
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/overlaywrapper"/>
            <dnddefaultghost
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/dnddefaultghost"/>
            <styleselector
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/styleselector"
                type="component"/>
        </items>
    </content>
</jcr:root>
