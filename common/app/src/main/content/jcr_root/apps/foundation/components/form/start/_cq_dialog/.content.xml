<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="cq/gui/components/authoring/dialog"
          jcr:title="Form Start">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <form
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Form"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <redirect
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="girlscouts/components/form/pathfield"
                                            fieldLabel="Thank You Page"
                                            name="./redirect"
                                            required="{Boolean}true"/>
                                    <workflowmodel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            emptyOption="{Boolean}true"
                                            fieldDescription="Whether a workflow should be started with the stored content as payload."
                                            fieldLabel="Start Workflow"
                                            name="./workflowModel">
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/wcm/components/form/container/v1/datasource/workflowmodel"/>
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                cq-dialog-dropdown-showhide-target=".cmp-workflow-title"/>
                                    </workflowmodel>
                                </items>
                            </columns>
                        </items>
                    </form>
                    <advanced
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Advanced"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <actionType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:class="cq-dialog-dropdown-showhide"
                                            fieldLabel="Actions"
                                            name="./actionType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <mail
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Send Mail"
                                                    value="girlscouts/components/form/actions/gsmail"/>
                                            <store-content
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Store Content"
                                                    value="girlscouts/components/form/actions/gsstore"/>
                                            <web-to-case
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Web To Case"
                                                    value="girlscouts/components/form/actions/web-to-case"/>
                                            <web-to-lead
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Web To Lead"
                                                    value="girlscouts/components/form/actions/web-to-lead"/>
                                        </items>
                                        <granite:data jcr:primaryType="nt:unstructured"
                                                      cq-dialog-dropdown-showhide-target=".actionType-showhide-target"/>
                                    </actionType>
                                    <debug-email
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Debug Email"
                                            name="./debug"/>
                                    <form-identifier
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Form Identifier"
                                            name="./formid"
                                            required="{Boolean}true"/>
                                    <load-path
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Load Path"/>
                                    <client-validation
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="Check the box to enable selection."
                                            name="./clientValidation"
                                            text="Client Validation"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"/>
                                    <client-validation-type
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                            name="./clientValidation@TypeHint"
                                            value="Boolean"/>
                                    <validation-resource-type
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/coral/foundation/form/textfield"
                                            fieldLabel="Validation Resource Type"
                                            name="./validationRT"/>
                                    <action-config jcr:primaryType="nt:unstructured"
                                                   jcr:title="Action Configuration"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <content-path-wrapper jcr:primaryType="nt:unstructured"
                                                                  sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                                  granite:class="actionType-showhide-target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <content-path
                                                            granite:class="actionType-showhide-target"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="girlscouts/components/form/pathfield"
                                                            fieldLabel="Content Path *"
                                                            name="./action"
                                                            storecontent="field"
                                                            rootPath="/content/usergenerated">

                                                    </content-path>
                                                </items>
                                                <granite:data jcr:primaryType="nt:unstructured"
                                                              showhidetargetvalue="girlscouts/components/form/actions/gsstore, girlscouts/components/form/actions/gsmail"/>
                                            </content-path-wrapper>
                                            <confirmation-wrapper jcr:primaryType="nt:unstructured"
                                                                  sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                                  granite:class="actionType-showhide-target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <confirmation-bcc
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            fieldDescription="The recipient of the confirmation email will not see email addresses entered here"
                                                            fieldLabel="Confirmation BCC">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                name="./confirmationmailto"/>
                                                    </confirmation-bcc>
                                                    <confirmation-from-email
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Confirmation From Email"
                                                            name="./confirmationFrom">
                                                    </confirmation-from-email>
                                                    <confirmation-subject
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Confirmation Subject"
                                                            name="./confirmationSubject">
                                                    </confirmation-subject>
                                                    <email-template
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="girlscouts/components/form/pathfield"
                                                            fieldLabel="Path To Email Template"
                                                            name="./templatePath">
                                                    </email-template>
                                                    <disable-conf-emails
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                            name="./disableConfirmationEmails"
                                                            text="Disable Confirmation Emails"
                                                            value="{Boolean}true">
                                                    </disable-conf-emails>
                                                </items>
                                                <granite:data jcr:primaryType="nt:unstructured"
                                                              showhidetargetvalue="girlscouts/components/form/actions/gsstore, girlscouts/components/form/actions/web-to-case, girlscouts/components/form/actions/gsmail "/>
                                            </confirmation-wrapper>
                                            <web-to-lead-wrapper jcr:primaryType="nt:unstructured"
                                                                 sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                                 granite:class="actionType-showhide-target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <campaign-id

                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Campaign ID"
                                                            name="./campaignID">
                                                    </campaign-id>
                                                    <lead-types
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Lead Type"
                                                            name="./leadType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <general-lead
                                                                    jcr:primaryType="nt:unstructured"
                                                                    selected="true"
                                                                    text="General Lead Form (Intake into SFMC to be Qualified)"
                                                                    value="General"/>
                                                            <direct-contact
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Direct Contact (Salesforce Forms)"
                                                                    value="DirectContact"/>
                                                            <newsletter-signup
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Newsletter Signup (Intake into SFMC to sign them up for General News / Information)"
                                                                    value="Newsletter"/>
                                                        </items>

                                                    </lead-types>
                                                </items>
                                                <granite:data jcr:primaryType="nt:unstructured"
                                                              showhidetargetvalue="girlscouts/components/form/actions/web-to-lead"/>
                                            </web-to-lead-wrapper>
                                            <email-wrapper jcr:primaryType="nt:unstructured"
                                                           sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                           granite:class="actionType-showhide-target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <upload-limit
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                            fieldDescription="Enter value to restrict file upload size limit. (e.g. 10 = upload file size cannot be larger than 10MB)"
                                                            fieldLabel="File Upload Size Limit"
                                                            name="./fileUploadSizeLimit">
                                                    </upload-limit>
                                                    <store-content
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                            name="./storeContent"
                                                            text="Store Email Content"
                                                            value="{Boolean}true">
                                                    </store-content>
                                                    <from-email
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="From Email *"
                                                            name="./from">
                                                    </from-email>
                                                    <to-email
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            fieldLabel="Mail To Email *">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                name="./mailto"/>
                                                    </to-email>
                                                    <cc
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        fieldLabel="CC">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                name="./cc"/>
                                                    </cc>
                                                    <bcc
                                                         jcr:primaryType="nt:unstructured"
                                                         sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                         fieldLabel="BCC">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                name="./bcc"/>
                                                    </bcc>
                                                    <subject
                                                             jcr:primaryType="nt:unstructured"
                                                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                             fieldLabel="Subject"
                                                             name="./subject">

                                                    </subject>
                                                </items>
                                                <granite:data jcr:primaryType="nt:unstructured"
                                                              showhidetargetvalue="girlscouts/components/form/actions/gsmail"/>
                                            </email-wrapper>
                                        </items>
                                    </action-config>
                                </items>
                            </columns>
                        </items>
                    </advanced>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
