<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog"
    jcr:title="Form Start">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <form
                jcr:primaryType="nt:unstructured"
                jcr:title="Form"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <redirect
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="girlscouts/components/form/pathfield"
                                fieldLabel="Thank You Page"
                                name="./redirect"
                                required="{Boolean}true"/>
                            <workflowmodel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                emptyOption="{Boolean}true"
                                fieldDescription="Whether a workflow should be started with the stored content as payload."
                                fieldLabel="Start Workflow"
                                name="./workflowModel">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="core/wcm/components/form/container/v1/datasource/workflowmodel"/>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".cmp-workflow-title"/>
                            </workflowmodel>
                        </items>
                    </columns>
                </items>
            </form>
            <advanced
                jcr:primaryType="nt:unstructured"
                jcr:title="Advanced"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <common-fields
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Common Configuration"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <actions
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        granite:class="cq-dialog-dropdown-showhide"
                                        fieldLabel="Actions"
                                        name="./actionType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <mail
                                                jcr:primaryType="nt:unstructured"
                                                text="Send Mail"
                                                value="girlscouts/components/form/actions/gsmail"/>
                                            <store-content
                                                jcr:primaryType="nt:unstructured"
                                                text="Store Content"
                                                value="girlscouts/components/form/actions/gsstore"/>
                                            <web-to-case
                                                jcr:primaryType="nt:unstructured"
                                                text="Web To Case"
                                                value="girlscouts/components/form/actions/web-to-case"/>
                                            <web-to-lead
                                                jcr:primaryType="nt:unstructured"
                                                text="Web To Lead"
                                                value="girlscouts/components/form/actions/web-to-lead"/>
                                        </items>
                                        <granite:data jcr:primaryType="nt:unstructured" cq-dialog-dropdown-showhide-target=".actionType-showhide-target"/>
                                    </actions>
                                    <form-identifier
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Form Identifier"
                                        name="./formid"
                                        required="{Boolean}true"/>
                                    <load-path
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Load Path"/>
                                    <client-validation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        fieldDescription="Check the box to enable selection."
                                        name="./clientValidation"
                                        text="Client Validation"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true"/>
                                    <client-validation-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                        name="./clientValidation@TypeHint"
                                        value="Boolean"/>
                                    <validation-resource-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Validation Resource Type"
                                        name="./validationRT"/>
                                </items>
                            </common-fields>
                            <action-config
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Action Configuration"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <store-content granite:class="actionType-showhide-target"
                                                   jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <content-path
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="girlscouts/components/form/pathfield"
                                                    fieldLabel="Content Path *"
                                                    name="./action"
                                                    storecontent="field"
                                                    rootPath="/content/usergenerated"/>
                                            <confirmation-bcc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    fieldDescription="The recipient of the confirmation email will not see email addresses entered here"
                                                    fieldLabel="Confirmation BCC">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        name="./confirmationmailto"/>
                                            </confirmation-bcc>
                                            <confirmation-from-email
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Confirmation From Email"
                                                    name="./confirmationFrom"/>
                                            <confirmation-subject
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Confirmation Subject"
                                                    name="./confirmationSubject"/>
                                            <email-template
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="girlscouts/components/form/pathfield"
                                                    fieldLabel="Path To Email Template"
                                                    name="./templatePath"/>
                                            <disable-conf-emails
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                    name="./disableConfirmationEmails"
                                                    text="Disable Confirmation Emails"
                                                    value="{Boolean}true"/>
                                        </items>
                                    </store-content>
                                    <web-to-case granite:class="actionType-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <request-url-field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Request URL"
                                                    name="./requestURL"/>
                                            <confirmation-bcc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    fieldDescription="The recipient of the confirmation email will not see email addresses entered here"
                                                    fieldLabel="Confirmation BCC">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        name="./confirmationmailto"/>
                                            </confirmation-bcc>
                                            <confirmation-from-email
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Confirmation From Email"
                                                    name="./confirmationFrom"/>
                                            <confirmation-subject
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Confirmation Subject"
                                                    name="./confirmationSubject"/>
                                            <email-template
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="girlscouts/components/form/pathfield"
                                                    fieldLabel="Path To Email Template"
                                                    name="./templatePath"/>
                                            <disable-conf-emails
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                    name="./disableConfirmationEmails"
                                                    text="Disable Confirmation Emails"
                                                    value="{Boolean}true"/>
                                        </items>
                                    </web-to-case>
                                    <web-to-lead granite:class="actionType-showhide-target"
                                                 jcr:primaryType="nt:unstructured"
                                                 sling:resourceType="granite/ui/components/foundation/container">
                                        <campaign-id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Campaign ID"
                                                name="./campaignID"
                                                wrapperClass="hide gs-hide-show web-to-lead"/>
                                        <lead-types
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                wrapperClass="hide gs-hide-show web-to-lead"
                                                fieldLabel="Lead Type"
                                                name="./leadType">
                                            <items jcr:primaryType="nt:unstructured">
                                                <general-lead
                                                        jcr:primaryType="nt:unstructured"

                                                        selected="true"
                                                        text="General Lead Form (Intake into SFMC to be Qualified)"
                                                        value="General"/>
                                                <direct-contact
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Direct Contact (Salesforce Forms)"
                                                        value="DirectContact"/>
                                                <newsletter-signup
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Newsletter Signup (Intake into SFMC to sign them up for General News / Information)"
                                                        value="Newsletter"/>
                                            </items>
                                        </lead-types>
                                    </web-to-lead>
                                    <mail
                                        granite:class="actionType-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <upload-limit
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="Enter value to restrict file upload size limit. (e.g. 10 = upload file size cannot be larger than 10MB)"
                                                fieldLabel="File Upload Size Limit"
                                                name="./fileUploadSizeLimit"/>
                                            <content-path
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="girlscouts/components/form/pathfield"
                                                    fieldLabel="Content Path *"
                                                    name="./action"
                                                    storecontent="field"
                                                    rootPath="/content/usergenerated"/>
                                            <store-content
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                name="./storeContent"
                                                text="Store Email Content"
                                                value="{Boolean}true"/>
                                            <store-content-delete
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./disableConfirmation@Delete"
                                                value="{Boolean}true"/>
                                            <from-email
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="From Email *"
                                                name="./from"/>
                                            <to-email
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="Mail To Email *">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./mailto"/>
                                            </to-email>
                                            <cc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="CC">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./cc"/>
                                            </cc>
                                            <bcc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="BCC">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./bcc"/>
                                            </bcc>
                                            <subject
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Subject"
                                                name="./subject"/>
                                            <confirmation-bcc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldDescription="The recipient of the confirmation email will not see email addresses entered here"
                                                fieldLabel="Confirmation BCC">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./confirmationmailto"/>
                                            </confirmation-bcc>
                                            <confirmation-from-email
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Confirmation From Email"
                                                name="./confirmationFrom"/>
                                            <confirmation-subject
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Confirmation Subject"
                                                name="./confirmationSubject"/>
                                            <email-template
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="girlscouts/components/form/pathfield"
                                                fieldLabel="Path To Email Template"
                                                name="./templatePath"/>
                                            <disable-conf-emails
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="By default, confirmation emails will be sent to email addresses entered into any fields starting with 'email-confirmation'. You can add a number at the end for multiple confirmation fields."
                                                name="./disableConfirmationEmails"
                                                text="Disable Confirmation Emails"
                                                value="{Boolean}true"/>
                                            <disable-conf-emails-delete
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./disableConfirmationEmails@Delete"
                                                value="{Boolean}true"/>
                                        </items>
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                                    </mail>
                                </items>
                            </action-config>
                        </items>
                    </columns>
                </items>
            </advanced>
        </items>
    </content>
</jcr:root>
