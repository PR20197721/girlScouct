<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <main
                jcr:primaryType="cq:Panel"
                title="Join Redirect">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        defaultValue="JOIN!"
                        fieldDescription="Call To Action"
                        fieldLabel="Text"
                        name="./text"
                        xtype="textfield"/>
                    <images
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Images for the slider"
                        fieldLabel="Images"
                        name="./images"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            rootPath="/content/dam"
                            xtype="pathfield"/>
                    </images>
                </items>
            </main>
            <mobile
                jcr:primaryType="cq:Panel"
                title="Join Redirect Mobile">
                <items jcr:primaryType="cq:WidgetCollection">
                    <backgroundcolor
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Background color in HEX ex FFFFFF"
                        fieldLabel="Background Color"
                        name="./backgroundcolor"
                        xtype="textfield"/>
                    <boximagemobile
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Background color for mobile"
                        fieldLabel="Alternative to GIRL logo"
                        name="./logomobile"
                        xtype="textfield"/>
                </items>
            </mobile>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./logo/imageCrop"
                ddGroups="media"
                fileNameParameter="./logo/fileName"
                fileReferenceParameter="./logo/fileReference"
                mapParameter="./logo/imageMap"
                name="./logo"
                requestSuffix="/logo.img.png"
                rotateParameter="./logo/imageRotate"
                title="Image"
                xtype="html5smartimage">
                <items jcr:primaryType="cq:WidgetCollection">
                    <resource-type
                        jcr:primaryType="cq:Widget"
                        name="./logo/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </image>
            <mobileimage
                jcr:primaryType="cq:Widget"
                cropParameter="./mobileimage/imageCrop"
                ddGroups="media"
                fileNameParameter="./mobileimage/fileName"
                fileReferenceParameter="./mobileimage/fileReference"
                mapParameter="./mobileimage/imageMap"
                name="./logomobile"
                requestSuffix="/mobileimage.img.png"
                rotateParameter="./mobileimage/imageRotate"
                title="Mobile Image"
                xtype="html5smartimage">
                <items jcr:primaryType="cq:WidgetCollection">
                    <resource-type
                        jcr:primaryType="cq:Widget"
                        name="./mobileimage/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </mobileimage>
        </items>
    </items>
</jcr:root>
