<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
	        jcr:primaryType="nt:unstructured"
	        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
	    <items jcr:primaryType="nt:unstructured">
			<main
                 jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/foundation/container">
                 <layout
			        jcr:primaryType="nt:unstructured"
			        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                 <items jcr:primaryType="nt:unstructured">
                     <display-sticky-nav
                         jcr:primaryType="nt:unstructured"
                         sling:resourceType="granite/ui/components/foundation/form/checkbox"
                         fieldDescription="Will display a sticky nav when scrolling down the page."
                         name="./displayStickyNav"
                         uncheckedValue="{Boolean}false"
		                 value="{Boolean}true"
                         text="Display Sticky Navigation"/>
                      <multi
	                      jcr:primaryType="nt:unstructured"
	                      sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
	                      composite="true"
	                      fieldLabel="Links">
	                      <field
	                          jcr:primaryType="nt:unstructured"
	                          sling:resourceType="granite/ui/components/coral/foundation/container"
	                          class="coral-Table--bordered" 
	                          name="./navs">
	                          <items jcr:primaryType="nt:unstructured">
	                              <large-label
	                                  jcr:primaryType="nt:unstructured"
	                                  sling:resourceType="granite/ui/components/foundation/form/textfield"
	                                  fieldLabel="Large Label"
	                                  name="large-label"/>
	                              <medium-label
	                                  jcr:primaryType="nt:unstructured"
	                                  sling:resourceType="granite/ui/components/foundation/form/textfield"
	                                  fieldLabel="Medium Label"
	                                  name="medium-label"/>
	                              <small-label
	                                  jcr:primaryType="nt:unstructured"
	                                  sling:resourceType="granite/ui/components/foundation/form/textfield"
	                                  fieldLabel="Small Label"
	                                  name="small-label"/>
	                              <path
	                                  jcr:primaryType="nt:unstructured"
	                                  sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
	                                  fieldLabel="Path"
	                                  rootPath="/content"
	                                  name="path"/>
	                              <class
	                                  jcr:primaryType="nt:unstructured"
	                                  sling:resourceType="granite/ui/components/foundation/form/textfield"
	                                  fieldDescription="Put CSS class here to add to link"
	                                  fieldLabel="Class"
	                                  name="class"/>
	                              <hide-in-desktop
		                          		jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/form/checkbox"		                                
		                                name="hide-in-desktop"
		                                text="Hide in Desktop"
		                                uncheckedValue="{Boolean}false"
		                                value="{Boolean}true"/>
		                          <hide-in-mobile
		                          		jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/form/checkbox"		                                
		                                name="hide-in-mobile"
		                                text="Hide in Mobile"
		                                uncheckedValue="{Boolean}false"
		                                value="{Boolean}true"/>
		                          <root-landing-page
		                          		jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/form/checkbox"		                                
		                                name="root-landing-page"
		                                text="Root Landing Page"
		                                uncheckedValue="{Boolean}false"
		                                value="{Boolean}true"/>
		                          <new-window
		                          		jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/form/checkbox"		                                
		                                name="new-window"
		                                text="Open in new window"
		                                uncheckedValue="{Boolean}false"
		                                value="{Boolean}true"/>
	                          </items>
	                      </field>
	                  </multi>	                     	                           
                 </items>
            </main>	    	
		</items>
    </content>
</jcr:root>
