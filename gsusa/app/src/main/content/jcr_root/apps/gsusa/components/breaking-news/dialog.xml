<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}450"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <properties
                jcr:primaryType="cq:Panel"
                title="Properties">
                <items jcr:primaryType="cq:WidgetCollection">
                    <newstype
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Choose one type of Breaking News"
                        fieldLabel="Show"
                        name="./newstype"
                        type="radiogroup"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <option1
                                jcr:primaryType="cq:Widget"
                                text="None"
                                value="None"/>
                            <option2
                                jcr:primaryType="cq:Widget"
                                text="Text"
                                value="Text"/>
                            <option3
                                jcr:primaryType="cq:Widget"
                                text="Image"
                                value="Image"/>
                        </options>
                    </newstype>
                    <alert
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) Enter a bold alert statement (e.g. BREAKING NEWS:)"
                        fieldLabel="Alert"
                        name="./alert"
                        xtype="textfield"/>
                    <message
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter the breaking news message. If left blank, breaking news will be hidden"
                        fieldLabel="News Message"
                        name="./message"
                        xtype="textarea"/>
                    <textcolor
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) Enter text color in HEX (e.g. ffffff)"
                        fieldLabel="Text Color"
                        name="./textcolor"
                        xtype="textfield"/>
                    <url
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) Enter a URL to link to, e.g. http://girlscouts.org"
                        fieldLabel="URL"
                        linkPattern="\{0}.html"
                        name="./url"
                        xtype="pathfield"/>
                    <bgcolor
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) Enter background color in HEX (e.g. e34c38)"
                        fieldLabel="Background Color"
                        name="./bgcolor"
                        xtype="textfield"/>
                </items>
            </properties>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./thumbnail/imageCrop"
                ddGroups="media"
                fileNameParameter="./thumbnail/fileName"
                fileReferenceParameter="./thumbnail/fileReference"
                mapParameter="./thumbnail/imageMap"
                name="./file"
                requestSuffix="/thumbnail.img.png"
                rotateParameter="./thumbnail/imageRotate"
                title="Image"
                xtype="html5smartimage">
                <items jcr:primaryType="cq:WidgetCollection">
                    <resource-type
                        jcr:primaryType="cq:Widget"
                        name="./thumbnail/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </image>
        </items>
    </items>
</jcr:root>
