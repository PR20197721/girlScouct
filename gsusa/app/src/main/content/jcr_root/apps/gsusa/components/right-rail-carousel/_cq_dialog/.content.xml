<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Right Rail Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <dynamiccarousel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="If dynamic carousel is turned off. Only the first image will be shown."
                                name="./dynamiccarousel"
                                text="Dynamic Carousel"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <dynamiccarousel-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./dynamiccarousel@Delete"
                                value="{Boolean}true"/>
                            <dynamiccarouselType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./dynamiccarousel@TypeHint"
                                value="Boolean"/>
                            <carouseltitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Carousel Title"
                                name="./carouselTitle"/>
                            <carouselsubtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Carousel Sub-Title"
                                name="./carouselSubTitle"/>
                            <calltoactionname
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Call To Action Name"
                                name="./calltoactionname"/>
                            <calltoactionlink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="girlscouts/components/form/pathfield"
                                fieldLabel="Call To Action Link"
                                name="./calltoactionlink"/>
                        </items>
                    </columns>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Carousel Items"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <carouselItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="true"
                                fieldDescription="Add Item"
                                fieldLabel="Slide">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    class="coral-Table--bordered"
                                    name="./carouselItems">
                                    <items jcr:primaryType="nt:unstructured">
                                        <link
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Link"
                                            name="link"/>
                                        <imagePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="girlscouts/components/form/pathfield"
                                            fieldLabel="Image"
                                            name="./imagePath"
                                            rootPath="/content/dam/"/>
                                        <newWindow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                            name="./newWindow"
                                            text="Open Link in New Window"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"/>
                                        <newWindowType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                                            name="./newWindow@TypeHint"
                                            value="Boolean"/>
                                        <newWindowDelete
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                                            name="./newWindow@Delete"
                                            value="{Boolean}true"/>
                                        <text
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                            customStart="false"
                                            fieldLabel="Label"
                                            height="{Long}300"
                                            name="./label"
                                            useFixedInlineToolbar="true">
                                            <rtePlugins
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="girlscouts/components/richtext-config/rtePlugins"/>
                                            <specialCharsConfig
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="girlscouts/components/richtext-config/specialCharsConfig"/>
                                            <uiSettings
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="girlscouts/components/richtext-config/uiSettings"/>
                                        </text>
                                    </items>
                                </field>
                            </carouselItems>
                        </items>
                    </columns>
                </items>
            </tab2>
            <tab3
                jcr:primaryType="nt:unstructured"
                jcr:title="Carousel Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <autoScroll
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./autoscroll"
                                text="Auto Scroll"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <autoScrollDelete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./autoscroll@Delete"
                                value="{Boolean}true"/>
                            <autoScrollType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./autoscroll@TypeHint"
                                value="Boolean"/>
                            <timedelay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                defaultValue="5000"
                                fieldDescription="Default: 2000, Min: 2000, Max: 10000"
                                fieldLabel="Time Delay of the carousel (in ms)"
                                max="10000"
                                min="2000"
                                name="./timedelay"/>
                            <showverticalrule
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Default: false"
                                name="./showverticalrule"
                                text="Show Vertical Rule"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <showverticalruleDelete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./showverticalrule@Delete"
                                value="{Boolean}true"/>
                            <showverticalruleType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./showverticalrule@TypeHint"
                                value="Boolean"/>
                        </items>
                    </columns>
                </items>
            </tab3>
        </items>
    </content>
</jcr:root>
