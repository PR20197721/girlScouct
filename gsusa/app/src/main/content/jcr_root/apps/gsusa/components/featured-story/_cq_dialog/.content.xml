<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Navigation"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title/>
                            <description/>
                            <icon/>
                            <background-color/>
                            <no-padding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="The popup tile will have no padding if checked."
                                name="./noPadding"
                                text="No Padding"/>
                            <no-padding-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./noPadding@Delete"
                                value="{Boolean}true"/>
                            <theme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Theme"
                                name="./theme"
                                value="classic">
                                <items jcr:primaryType="nt:unstructured">
                                    <classic
                                        jcr:primaryType="nt:unstructured"
                                        text="Classic"
                                        value="classic"/>
                                    <colorless-background
                                        jcr:primaryType="nt:unstructured"
                                        text="Colorless Background"
                                        value="colorless"/>
                                    <shop
                                        jcr:primaryType="nt:unstructured"
                                        text="Shop"
                                        value="shop"/>
                                    <social
                                        jcr:primaryType="nt:unstructured"
                                        text="Social"
                                        value="social"/>
                                    <video
                                        jcr:primaryType="nt:unstructured"
                                        text="Video"
                                        value="video"/>
                                </items>
                            </theme>
                            <text/>
                            <isRichTextFlag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./textIsRich"
                                value="true"/>
                            <button-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="For applicable themes, please select the text to appear in the button"
                                fieldLabel="Button Text"
                                name="./buttonText"/>
                            <button-link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="For applicable themes, please enter the url the button will link to"
                                fieldLabel="Button Link"
                                name="./buttonLink"
                                rootPath="/content/gsusa/en"/>
                        </items>
                    </columns>
                </items>
            </tab1>
            <background-image/>
        </items>
    </content>
</jcr:root>
