<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
        
            <maincontent
                jcr:primaryType="nt:unstructured"
                jcr:title="Main Content"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="API url to send email info"
                                fieldLabel="API Endpoint"
                                name="./url"
                                required="false"/>
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Heading"
                                name="./heading"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Description"
                                name="./description"/>
                            <emailplaceholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Email Placeholder"
                                name="./emailplaceholder"/>
                            <emailplaceholdermobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="For mobile 320px and limit 25 chars"
                                fieldLabel="Email Placeholder Mobile"
                                name="./emailplaceholdermobile"/>
                            <submitbuttontext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Submit Text"
                                name="./submitbuttontext"/>
                            <topborder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Check to apply border at top of the component"
                                name="./topborder"
                                text="Top Border"
                                value="{Boolean}true"
                                uncheckedValue="{Boolean}false"/>
                            <topborder-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./topborder@Delete"
                                value="{Boolean}true"/>
                            <bottomborder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Check to apply border at top of the component"
                                name="./bottomborder"
                                text="Bottom Border"
                                value="{Boolean}true"
                                uncheckedValue="{Boolean}false"/>
                            <bottomborder-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./bottomborder@Delete"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </maincontent>
            
            <submission
                jcr:primaryType="nt:unstructured"
                jcr:title="Submission"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <errorheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Error Heading"
                                name="./errorheading"/>
                            <errordescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Error Description"
                                name="./errordescription"/>
                            <successheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Success Heading"
                                name="./successheading"/>
                            <successdescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription=""
                                fieldLabel="Success Description"
                                name="./successdescription"/>
                            <alertemailexists
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Alert message for when submitted email already exists"
                                fieldLabel="Alert "
                                name="./alertemailexists"/>
                        </items>
                    </columns>
                </items>
            </submission>
            
            <icon-image
                jcr:primaryType="nt:unstructured"
                jcr:title="Icon Image"
                sling:resourceType="granite/ui/components/foundation/container">
            		<layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
               	<items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
						<file
							jcr:primaryType="nt:unstructured"
							sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
							autoStart="{Boolean}false"
							class="cq-droptarget"
							fieldLabel="Image asset"
    						fileNameParameter="./iconimage/fileName"
    						fileReferenceParameter="./iconimage/fileReference"
							mimeTypes="[image]"
							multiple="{Boolean}false"
    						name="./iconimage/file"
    						title="Icon Image"
							uploadUrl="${suffix.path}"
							useHTML5="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </icon-image>
 
            <thankyou-image
                jcr:primaryType="nt:unstructured"
                jcr:title="Thankyou Image"
                sling:resourceType="granite/ui/components/foundation/container">
            		<layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
               	<items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
							<file
								jcr:primaryType="nt:unstructured"
								sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
								autoStart="{Boolean}false"
								class="cq-droptarget"
								fieldLabel="Image asset"
	    						fileNameParameter="./thankyouimage/fileName"
	    						fileReferenceParameter="./thankyouimage/fileReference"
								mimeTypes="[image]"
								multiple="{Boolean}false"
	    						name="./thankyouimage/file"
	    						title="Thank You Image"
								uploadUrl="${suffix.path}"
								useHTML5="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </thankyou-image>
            
            <sfmc2
                jcr:primaryType="nt:unstructured"
                jcr:title="SFMC"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">                        	
                            <source
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Originating source in 300 or less characters"
                                fieldLabel="Source"
    							defaultValue=""
                                name="./source"
                                required="false"/>
                            <sourceValue
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Originating source value"
                                fieldLabel="Source Value"
    							defaultValue=""
                                name="./sourcevalue"
                                required="false"/>
                            <sfmc-select
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".text-image-hide-show"
                                fieldLabel="Choose One"
                                fieldDescription="Choose Data Extension or Triggered Send"
                                name="./sfmc">
                                <items jcr:primaryType="nt:unstructured">
                                	<ts
                                		jcr:primaryType="nt:unstructured"
                                		text="Triggered Send"
                                		value="ts" />
                                	<de
                                		jcr:primaryType="nt:unstructured"
                                		text="Data Extension"
                                		value="de" />
                                </items>
                            </sfmc-select> 
                            <dataextension
                            	jcr:primaryType="nt:unstructured"
                            	sling:resourceType="granite/ui/components/foundation/container"
                            	class="hide text-image-hide-show de"
                            	showhidetargetvalue="de">
                            	<items jcr:primaryType="nt:unstructured">
                            		<heading
                            			jcr:pimaryType="nt:unstructured"
                            			level="{Long}4"
                            			text="DataExtension Heading" />
                            		<well
                            			jcr:primaryType="nt:unstructured"
                            			sling:resourceType="granite/ui/components/foundation/container">
                            			<layout
                            				jcr:primaryType="nt:unstructured"
                            				sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                            			<items jcr:primaryType="nt:unstructured">
                            				<dataextension
                            					jcr:primaryType="nt:unstructured"
                            					sling:resourceType="granite/ui/components/foundation/form/textfield"
                            					name="./dataextensionkey"
                            					fieldLabel="Data Extension Key" 
                            					validationPattern="string" />                            					
                            			</items>
                            		</well>
                            	</items>
                            </dataextension>
                            <triggersend
                            	jcr:primaryType="nt:unstructured"
                            	sling:resourceType="granite/ui/components/foundation/container"
                            	class="hide text-image-hide-show ts"
                            	showhidetargetvalue="ts">
                            	<items jcr:primaryType="nt:unstructured">
                            		<heading
                            			jcr:pimaryType="nt:unstructured"
                            			level="{Long}4"
                            			text="TriggerSend Heading" />
                            		<well
                            			jcr:primaryType="nt:unstructured"
                            			sling:resourceType="granite/ui/components/foundation/container">
                            			<layout
                            				jcr:primaryType="nt:unstructured"
                            				sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                            			<items jcr:primaryType="nt:unstructured">
                            				<dataextension
                            					jcr:primaryType="nt:unstructured"
                            					sling:resourceType="granite/ui/components/foundation/form/textfield"
                            					name="./triggersendkey"
                            					fieldLabel="Triggered Send Key"
                            					fieldDescription="Must be numeric value"
                            					validationPattern="numeric" />                            					
                            			</items>
                            		</well>
                            	</items>
                            </triggersend>
                        </items>
                    </columns>
                </items>
            </sfmc2>
        
        
        </items>
    </content>
</jcr:root>
