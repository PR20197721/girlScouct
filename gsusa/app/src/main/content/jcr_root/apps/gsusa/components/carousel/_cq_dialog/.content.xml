<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab0
                jcr:primaryType="nt:unstructured"
                jcr:title="Images and Videos"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <children
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="true"
                                fieldDescription="If you have a video URL, please put it in the Link field and leave the image path blank"
                                fieldLabel="Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    class="coral-Table--bordered"
                                    name="./carouselList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Title"
                                            name="title"/>
                                        <imagepath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="girlscouts/components/form/pathfield"
                                            fieldLabel="Image Path"
                                            name="imagepath"
                                            rootPath="/content/dam"/>
                                        <url
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="girlscouts/components/form/pathfield"
                                            fieldLabel="Link"
                                            name="link"
                                            rootPath="/content"/>
                                        <alt
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Alt"
                                            name="alt"/>
                                        <newWindow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="newWindow"
                                            text="Open In New Window"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"/>
                                        <newwindow-delete
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                                            name="newWindow@Delete"
                                            value="{Boolean}true"/>
                                        <tempHidden
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="tempHidden"
                                            text="Temporarily Hidden"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"/>
                                        <tempHidden-delete
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                                            name="tempHidden@Delete"
                                            value="{Boolean}true"/>
                                    </items>
                                </field>
                            </children>
                        </items>
                    </columns>
                </items>
            </tab0>
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Blog"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bgImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="girlscouts/components/form/pathfield"
                                fieldLabel="Background Image"
                                name="./blogbgimage"
                                rootPath="/content/dam/girlscouts-gsusa"/>
                            <blog-id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="(Optional) Specify an alternative blog to use by entering its Blogger ID"
                                fieldLabel="Blog ID"
                                name="./blog-feed/id"/>
                            <api-key
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="(Optional) If you are using an alternative blog, enter its API Key here"
                                fieldLabel="API Key"
                                name="./blog-feed/key"/>
                            <post-id1
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Specify a blog post by its id."
                                fieldLabel="Post ID"
                                name="./blog-feed/post-id1"/>
                            <post-id2
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Specify a blog post by its id."
                                fieldLabel="Post ID"
                                name="./blog-feed/post-id2"/>
                            <post-id3
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Specify a blog post by its id."
                                fieldLabel="Post ID"
                                name="./blog-feed/post-id3"/>
                        </items>
                    </columns>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <autoScroll
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./homecarouselautoscroll"
                                text="Auto Scroll"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <autoscroll-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./homecarouselautoscroll@Delete"
                                value="{Boolean}true"/>
                            <timedelay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Default: 1000, Min: 20, Max: 10000"
                                fieldLabel="Transition Time of the carousel (in ms)"
                                max="10000"
                                min="20"
                                name="./homecarouseltimedelay"/>
                            <autoplayspeed
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Default: 2000, Min: 20, Max: 10000"
                                fieldLabel="Time Delay of the carousel (in ms)"
                                max="10000"
                                min="20"
                                name="./homecarouselautoplayspeed"/>
                            <desktop-section
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video Player Config (Desktop)"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <video-player-config-desktop
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Video Player Config (Desktop)"
                                        sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                        name="./videoConfigDesktop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nothumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="No Thumbnail (Default)"
                                                value="default"/>
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Thumbnail (Lazy Load)"
                                                value="thumbnail"/>
                                            <opennewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Open in new tab"
                                                value="link"/>
                                        </items>
                                    </video-player-config-desktop>
                                </items>
                            </desktop-section>
                            <mobile-section
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video Player Config (Mobile)"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <video-player-config-mobile
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Video Player Config (Mobile)"
                                        sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                        name="./videoConfigMobile">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nothumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="No Thumbnail (Default)"
                                                value="default"/>
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Thumbnail (Lazy Load)"
                                                value="thumbnail"/>
                                            <opennewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Open in new tab"
                                                value="link"/>
                                        </items>
                                    </video-player-config-mobile>
                                </items>
                            </mobile-section>
                        </items>
                    </columns>
                </items>
            </tab2>
            <tab7
                jcr:primaryType="nt:unstructured"
                jcr:title="Bottom Overlay"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <hideZIPcode
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./hideZIPCode"
                                text="Hide ZIPCode"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <hidezipcode-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./hideZIPCode@Delete"
                                value="{Boolean}true"/>
                            <Source
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This field is used for tracking in Google Analytics."
                                fieldLabel="Source"
                                name="./source7"
                                value="not_set"/>
                        </items>
                    </columns>
                </items>
            </tab7>
        </items>
    </content>
</jcr:root>
