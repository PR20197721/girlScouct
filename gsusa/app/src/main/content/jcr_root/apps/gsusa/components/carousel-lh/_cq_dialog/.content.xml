<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel LH"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <config
                jcr:primaryType="nt:unstructured"
                jcr:title="Profile"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <profilepath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="girlscouts/components/form/pathfield"
                                fieldLabel="Profile Path"
                                name="./profilepath"
                                rootPath="/content/gsusa/en"/>
                            <Source
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Number of profile images to show"
                                fieldLabel="Profile Count"
                                name="./numprofile"
                                value="3"/>
                        </items>
                    </columns>
                </items>
            </config>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <autoScroll
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./homecarouselautoscroll"
                                text="Auto Scroll"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <autoscroll-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./homecarouselautoscroll@Delete"
                                value="{Boolean}true"/>
                            <timedelay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Default: 1000, Min: 20, Max: 10000"
                                fieldLabel="Transition Time of the carousel (in ms)"
                                max="10000"
                                min="20"
                                name="./homecarouseltimedelay"/>
                            <autoplayspeed
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Default: 2000, Min: 20, Max: 10000"
                                fieldLabel="Time Delay of the carousel (in ms)"
                                max="10000"
                                min="20"
                                name="./homecarouselautoplayspeed"/>
                            <desktop-section
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video Player Config (Desktop)"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <video-player-config-desktop
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Video Player Config (Desktop)"
                                        sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                        name="./videoConfigDesktop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nothumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="No Thumbnail (Default)"
                                                value="default"/>
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Thumbnail (Lazy Load)"
                                                value="thumbnail"/>
                                            <opennewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Open in new tab"
                                                value="link"/>
                                        </items>
                                    </video-player-config-desktop>
                                </items>
                            </desktop-section>
                            <mobile-section
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video Player Config (Mobile)"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <video-player-config-mobile
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Video Player Config (Mobile)"
                                        sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                        name="./videoConfigMobile">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nothumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="No Thumbnail (Default)"
                                                value="default"/>
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Thumbnail (Lazy Load)"
                                                value="thumbnail"/>
                                            <opennewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                text="Open in new tab"
                                                value="link"/>
                                        </items>
                                    </video-player-config-mobile>
                                </items>
                            </mobile-section>
                        </items>
                    </columns>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>
