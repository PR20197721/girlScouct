<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Tag Listing"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <articletags
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                fieldDescription="Select One Tag"
                                fieldLabel="Article Tag"
                                multiple="{Boolean}true"
                                name="./tag"
                                rootPath="/etc/tags/gsusa/content-hub"/>
                            <number
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                defaultValue="{Long}9"
                                fieldLabel="Number of Tiles"
                                max="{Long}100"
                                min="{Long}1"
                                name="./num"
                                value="9"/>
                            <titleLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Listing Page"
                                name="./titleLink"
                                rootPath="/content/gsusa/en"/>
                            <priority
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./priority"
                                text="Sort By Priority"
                                value="{Boolean}true"
                                uncheckedValue="{Boolean}false"/>
                            <priority-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./priority@Delete"
                                value="{Boolean}true"/>
                            <borderLine
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                fieldLabel="Border Line"
                                name="./borderLine"
                                vertical="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <on
                                        jcr:primaryType="nt:unstructured"
                                        text="On"
                                        value="on"/>
                                    <off
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Off"
                                        value="off"/>
                                </items>
                            </borderLine>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
