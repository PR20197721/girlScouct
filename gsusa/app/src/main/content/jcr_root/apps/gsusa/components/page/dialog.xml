<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="400"
    stateful="false"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <basic
                    jcr:primaryType="cq:Widget"
                    path="/apps/gsusa/components/page/tab_basic.infinity.json"
                    xtype="cqinclude"/>
                <advanced
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_advanced.infinity.json"
                    xtype="cqinclude"/>
                <image
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_image.infinity.json"
                    xtype="cqinclude"/>
                <cloudservices
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_cloudservices.infinity.json"
                    xtype="cqinclude"/>
                <blueprint
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_blueprint.infinity.json"
                    xtype="cqinclude"/>
                <livecopy
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_livecopy.infinity.json"
                    xtype="cqinclude"/>
                <metadata
                    jcr:primaryType="cq:Widget"
                    title="Article Metadata">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <intro
                            jcr:primaryType="nt:unstructured"
                            html="&lt;b>These fields are for social media share and SEO.&lt;/b>"
                            xtype="label"/>
                        <article-title
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Default to the title of the page."
                            fieldLabel="Title"
                            fieldSubLabel="articleTitle"
                            name="./articleTitle"
                            xtype="textfield">
                            <listeners
                                jcr:primaryType="nt:unstructured"
                                loadcontent="function(){&#xa;    var field = $('input[name=&quot;./articleTitle&quot;]');&#xa;    if (field.val().length == 0) {&#xa;        field.val($('input[name=&quot;./jcr:title&quot;]').val());&#xa;    }&#xa;}&#xa;"/>
                        </article-title>
                        <short-description
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Short Description"
                            fieldSubLabel="description"
                            name="./description"
                            xtype="textarea"/>
                        <image-label
                            jcr:primaryType="nt:unstructured"
                            fieldLabel="Image"
                            html="Please use the &quot;Image&quot; tab to upload an image."
                            xtype="label"/>
                    </items>
                </metadata>
                <gsusa
                    jcr:primaryType="cq:Widget"
                    title="Girl Scouts USA">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <global-srch-landing-page
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Global Search Landing Page"
                            name="./globalLanding"
                            xtype="dynamicPathField"/>
                        <is-cookie-page
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Cookie pages have special headers, footers and third column."
                            fieldLabel="Is Cookie Page"
                            name="./isCookiePage"
                            type="radio"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <derived
                                    jcr:primaryType="nt:unstructured"
                                    text="Derived"
                                    value="derived"/>
                                <true
                                    jcr:primaryType="nt:unstructured"
                                    text="True"
                                    value="true"/>
                                <false
                                    jcr:primaryType="nt:unstructured"
                                    text="False"
                                    value="false"/>
                            </options>
                        </is-cookie-page>
                    </items>
                </gsusa>
            </items>
        </tabs>
    </items>
</jcr:root>
