<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <feedTitle
                                jcr:primaryType="nt:unstructured"
                                attribute="adhocevars"
                                fieldDescription=""
                                fieldLabel="Feed Title"
                                name="./feedTitle"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            <feedLandingPage
                                jcr:primaryType="nt:unstructured"
                                attribute="adhocevars"
                                fieldDescription="(e.g. http://www.girlscouts.org/en/raising-girls.html)"
                                fieldLabel="Feed Landing Page"
                                name="./feedLandingPage"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            <feedDesc
                                jcr:primaryType="nt:unstructured"
                                attribute="adhocevars"
                                fieldDescription=""
                                fieldLabel="Feed Desc"
                                name="./feedDesc"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            <feedScaffoldingType
                                jcr:primaryType="nt:unstructured"
                                allowBlank="false"
                                attribute="adhocevars"
                                fieldDescription="(e.g. /etc/scaffolding/gsusa/article)"
                                fieldLabel="Scaffolding Type"
                                name="./feedScaffoldingType"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            <feedMaxItems
                                jcr:primaryType="nt:unstructured"
                                attribute="adhocevars"
                                fieldDescription="Empty value will pull 9,999 articles."
                                fieldLabel="Max Items"
                                name="./feedMaxItems"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            <feedItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="true" 
                                fieldDescription="Add Item"
                                fieldLabel="Feed Paths">
								<field jcr:primaryType="nt:unstructured"
									sling:resourceType = "granite/ui/components/coral/foundation/container"
									class="coral-Table--bordered" 
									name="./feedItems">
									<items jcr:primaryType="nt:unstructured">
										<path 
		                                    jcr:primaryType="nt:unstructured"
		                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
		                                    name="./path"
		                                    fieldLabel="Path"
		                                    rootPath="/content"/>
			                            	<page
			                                jcr:primaryType="nt:unstructured"
			                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
			                                name="./page"
			                                value="{Boolean}true"
                                			uncheckedValue="{Boolean}false"
			                                text="Page"/>
										<pageType
										    jcr:primaryType="nt:unstructured"
										    sling:resourceType="granite/ui/components/foundation/form/hidden"
										    name="./page@TypeHint"
										    value="Boolean"/>
			                            <pageDelete
			                                jcr:primaryType="nt:unstructured"
			                                sling:resourceType="granite/ui/components/foundation/form/hidden"
			                                name="./page@Delete"
			                                value="{Boolean}true"/>
			                            	<subDir
				                                jcr:primaryType="nt:unstructured"
				                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
				                                name="./subDir"
				                                value="{Boolean}true"
	                                			uncheckedValue="{Boolean}false"
				                                text="SubDir"/>
										<subDirType
										    jcr:primaryType="nt:unstructured"
										    sling:resourceType="granite/ui/components/foundation/form/hidden"
										    name="./subDir@TypeHint"
										    value="Boolean"/>
			                            <subDirDelete
			                                jcr:primaryType="nt:unstructured"
			                                sling:resourceType="granite/ui/components/foundation/form/hidden"
			                                name="./subDir@Delete"
			                                value="{Boolean}true"/>
									</items>
								</field>
                            </feedItems>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
