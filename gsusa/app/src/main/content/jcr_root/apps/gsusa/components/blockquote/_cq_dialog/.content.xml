<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="BlockQuoteEditDialog">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <isRichTextFlag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./textIsRich"
                                value="true"/>
                            <isQuote
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./isQuote"
                                text="Check if you want to make this a quote"
                                value="{Boolean}true"
                                uncheckedValue="{Boolean}false"/>
                            <isquote-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./isQuote@Delete"
                                value="{Boolean}true"/>
							<isQuoteType
							    jcr:primaryType="nt:unstructured"
							    sling:resourceType="granite/ui/components/foundation/form/hidden"
							    name="./isQuote@TypeHint"
							    value="Boolean"/>
                            <hasQuotee
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./hasQuotee"
                                text="Display the quotee"
                                value="{Boolean}true"
                                uncheckedValue="{Boolean}false"/>
                            <hasquotee-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./hasQuotee@Delete"
                                value="{Boolean}true"/>
							<hasQuoteeType
							    jcr:primaryType="nt:unstructured"
							    sling:resourceType="granite/ui/components/foundation/form/hidden"
							    name="./hasQuotee@TypeHint"
							    value="Boolean"/>
                            <quotee
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Quotee (who said the quote)"
                                name="./quotee"/>
                            <style
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Style"
                                name="./style">
                                <items jcr:primaryType="nt:unstructured">
                                    <fuchsia
                                        jcr:primaryType="nt:unstructured"
                                        text="Fuchsia"
                                        value="bg-color fuchsia"/>
                                    <lightorange
                                        jcr:primaryType="nt:unstructured"
                                        text="Light Orange"
                                        value="bg-color lightorange"/>
                                    <darkorange
                                        jcr:primaryType="nt:unstructured"
                                        text="Dark Orange"
                                        value="bg-color darkorange"/>
                                    <purple
                                        jcr:primaryType="nt:unstructured"
                                        text="Purple"
                                        value="bg-color purple"/>
                                    <lightgreen
                                        jcr:primaryType="nt:unstructured"
                                        text="Light Green"
                                        value="bg-color lightgreen"/>
                                    <ribbon
                                        jcr:primaryType="nt:unstructured"
                                        text="Ribbon"
                                        value="bg-image"/>
                                    <cyan
                                        jcr:primaryType="nt:unstructured"
                                        text="Cyan"
                                        value="bg-color cyan"/>
                                </items>
                            </style>
                        </items>
                    </columns>
                </items>
            </properties>
            <styleDetails
                jcr:primaryType="nt:unstructured"
                jcr:title="Style Details"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                <columns
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <textalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Text Alignment"
                                defaultValue="left"
                                value="left"
                                name="./textalignment">
                            <items jcr:primaryType="nt:unstructured">
                                <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="center"/>
                                <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                            </items>
                        </textalignment>

                        <textsize
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldDescription="(Optional) Enter text size (e.g. 2.0625rem or 33px)"
                            fieldLabel="Text Size"
                            name="./textsize"/>

                        <lineheight
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="(Optional) Enter line height (e.g. 1.35em)"
                                fieldLabel="Line Height"
                                name="./lineheight"/>

                        <textcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="(Optional) Enter text color in HEX (e.g. ffffff)"
                                fieldLabel="Text Color"
                                name="./textcolor"/>

                        <backgroundcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Background Color"
                                fieldDescription="(Optional) Enter background color in HEX (e.g. ec008c)"
                                name="./backgroundcolor"
                                xtype="textfield"/>

                        <bordercolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Border Color"
                                fieldDescription="(Optional) Enter border color in HEX (e.g. d2007d)"
                                name="./bordercolor"
                                xtype="textfield"/>
                    </items>
                </columns>
                </items>
            </styleDetails>
        </items>
    </content>
</jcr:root>
