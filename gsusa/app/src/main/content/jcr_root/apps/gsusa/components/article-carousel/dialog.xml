<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}600"
    title="Article Carousel"
    width="{Long}1200"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab0
                jcr:primaryType="cq:Panel"
                title="Article Carousel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Component Title"
                        name="./componentTitle"
                        xtype="textfield"/>
                    <titleLink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Link of the carousel title and the See More link"
                        fieldLabel="Listing Page"
                        name="./titleLink"
                        rootPath="/content/gsusa/en"
                        xtype="pathfield"/>
                    <numberofarticles
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        defaultValue="11"
                        fieldDescription="Default: 11 Min: 3, Max: 30"
                        fieldLabel="Number of Articles"
                        maxValue="30"
                        minValue="3"
                        name="./num"
                        value="11"
                        xtype="numberfield"/>
                    <articletags
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Select One Tag"
                        fieldLabel="Article Tag"
                        name="./tag"
                        suggestMinChars="1"
                        xtype="tags">
                        <namespaces jcr:primaryType="cq:WidgetCollection">
                            <ns1
                                jcr:primaryType="nt:unstructured"
                                maximum="3"
                                name="gsusa"/>
                        </namespaces>
                    </articletags>
                    <sortByPriority
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sort By Priority"
                        name="./sortByPriority"
                        type="checkbox"
                        xtype="selection"/>
                    <borderLine
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue="on"
                        fieldLabel="Border Line"
                        name="./borderLine"
                        type="radio"
                        value="on"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <on
                                jcr:primaryType="nt:unstructured"
                                text="On"
                                value="on"/>
                            <off
                                jcr:primaryType="nt:unstructured"
                                text="Off"
                                value="off"/>
                        </options>
                    </borderLine>
                </items>
            </tab0>
        </items>
    </items>
</jcr:root>
