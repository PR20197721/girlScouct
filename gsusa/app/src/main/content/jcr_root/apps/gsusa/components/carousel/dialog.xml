<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}600"
    title="Carousel"
    width="{Long}1200"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab0
                jcr:primaryType="cq:Panel"
                title="Images and Videos">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        text="If you have a video URL, please put it in the Link field and leave the image path blank"
                        xtype="label"/>
                    <multi
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Images/Videos"
                        hideLabel="{Boolean}true"
                        name="./carouselList"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            xtype="imagevideomultifieldwidget"/>
                    </multi>
                </items>
            </tab0>
            <tab1
                jcr:primaryType="cq:Panel"
                title="Blog">
                <items jcr:primaryType="cq:WidgetCollection">
                    <bgImage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Image"
                        name="./blogbgimage"
                        rootPath="/content/dam/girlscouts-gsusa"
                        xtype="pathfield"/>
                    <blog-id
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) Specify an alternative blog to use by entering its Blogger ID"
                        fieldLabel="Blog ID"
                        name="./blog-feed/id"
                        xtype="textfield"/>
                    <api-key
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Optional) If you are using an alternative blog, enter its API Key here"
                        fieldLabel="API Key"
                        name="./blog-feed/key"
                        xtype="textfield"/>
                    <post-id1
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify a blog post by its id."
                        fieldLabel="Post ID"
                        name="./blog-feed/post-id1"
                        xtype="textfield"/>
                    <post-id2
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify a blog post by its id."
                        fieldLabel="Post ID"
                        name="./blog-feed/post-id2"
                        xtype="textfield"/>
                    <post-id3
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify a blog post by its id."
                        fieldLabel="Post ID"
                        name="./blog-feed/post-id3"
                        xtype="textfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <autoScroll
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Auto Scroll"
                        name="./homecarouselautoscroll"
                        type="checkbox"
                        xtype="selection"/>
                    <timedelay
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="Default: 1000, Min: 20, Max: 10000"
                        fieldLabel="Transition Time of the carousel (in ms)"
                        maxValue="10000"
                        minValue="20"
                        name="./homecarouseltimedelay"
                        xtype="numberfield"/>
                    <autoplayspeed
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="Default: 2000, Min: 20, Max: 10000"
                        fieldLabel="Time Delay of the carousel (in ms)"
                        maxValue="10000"
                        minValue="20"
                        name="./homecarouselautoplayspeed"
                        fieldDescription="Default: 2000, Min: 20, Max: 10000"
                        xtype="numberfield">
                    </autoplayspeed>
                    <radioDesktop
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Player Config (Desktop)"
                        name="./videoConfigDesktop"
                        defaultValue="default"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="No thumbnail (Default)"
                                value="default"/>
                            <thumbnail
                                jcr:primaryType="nt:unstructured"
                                text="Thumbnail (Lazy load)"
                                value="thumbnail"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                text="Open in new tab"
                                value="link"/>
                        </options>
                    </radioDesktop>
                    <radioMobile
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Player Config (Mobile)"
                        name="./videoConfigMobile"
                        defaultValue="default"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="No thumbnail (Default)"
                                value="default"/>
                            <thumbnail
                                jcr:primaryType="nt:unstructured"
                                text="Thumbnail (Lazy load)"
                                value="thumbnail"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                text="Open in new tab"
                                value="link"/>
                        </options>
                    </radioMobile>
                </items>
            </tab2>
            <tab7
                jcr:primaryType="cq:Panel"
                title="Bottom Overlay">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideZIPcode
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide ZIPCode"
                        name="./hideZIPCode"
                        type="checkbox"
                        xtype="selection"/>
                    <Source
                        jcr:primaryType="cq:Widget"
                        defaultValue="not_set"
                        fieldDescription="This field is used for tracking in Google Analytics."
                        fieldLabel="Source"
                        name="./source7"
                        value="not_set"
                        xtype="textfield"/>
                </items>
            </tab7>
        </items>
    </items>
</jcr:root>
