<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    width="{Long}1000"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Media">
                <items jcr:primaryType="cq:WidgetCollection">
                    <multi
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Insert paths to DAM photos or Youtube/Vimeo embed links"
                        fieldLabel="Links"
                        name="./links"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            rootPath="/content/dam"
                            xtype="titlepathfield"/>
                    </multi>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <autoScroll
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Auto Scroll"
                        name="./autoscroll"
                        type="checkbox"
                        xtype="selection"/>
                    <timedelay
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="Default: 2000, Min: 20, Max: 10000"
                        fieldLabel="Time Delay of the carousel (in ms)"
                        maxValue="10000"
                        minValue="20"
                        name="./timedelay"
                        fieldDescription="Default: 2000, Min: 20, Max: 10000"
                        xtype="numberfield">
                    </timedelay>
                    <radioDesktop
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Player Config (Desktop)"
                        name="./videoConfigDesktop"
                        defaultValue="default"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="No thumbnail (Default)"
                                value="default"/>
                            <thumbnail
                                jcr:primaryType="nt:unstructured"
                                text="Thumbnail (Lazy load)"
                                value="thumbnail"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                text="Open in new tab"
                                value="link"/>
                        </options>
                    </radioDesktop>
                    <radioMobile
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Player Config (Mobile)"
                        name="./videoConfigMobile"
                        defaultValue="default"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="No thumbnail (Default)"
                                value="default"/>
                            <thumbnail
                                jcr:primaryType="nt:unstructured"
                                text="Thumbnail (Lazy load)"
                                value="thumbnail"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                text="Open in new tab"
                                value="link"/>
                        </options>
                    </radioMobile>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
