<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    width="{Long}1000"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Media">
                <items
                	jcr:primaryType="cq:WidgetCollection">
	                <multi
	                        jcr:primaryType="cq:Widget"
	                        fieldLabel="Links"
	                        fieldDescription="Insert paths to DAM photos or Youtube/Vimeo embed links"
	                        name="./links"
	                        xtype="multifield">
	                        <fieldConfig
	                            jcr:primaryType="nt:unstructured"
	                            rootPath="/content/dam"
	                            xtype="titlepathfield"/>
	                    </multi>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <autoScroll
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Auto Scroll"
                        name="./autoscroll"
                        type="checkbox"
                		xtype="selection"/>
                    <timedelay
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Time Delay of the carousel (in ms)"
                        name="./timedelay"
                        allowNegative="{Boolean}false"
                        allowDecimals="{Boolean}false"
                        maxValue="10000"
                        minValue="20"
                        fieldDescription="Default: 2000, Min: 20, Max: 10000"
                        xtype="numberfield">
                    </timedelay>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
