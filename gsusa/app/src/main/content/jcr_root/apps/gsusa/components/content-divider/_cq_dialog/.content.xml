<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Content Divider"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab0
                jcr:primaryType="nt:unstructured"
                jcr:title="Content Divider Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <paddingTop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Padding Top (default: 20px)"
                                name="./paddingTop"/>
                            <paddingBottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Padding bottom (default: 20px)"
                                name="./paddingBottom"/>
                            <paddingLeft
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Padding left (default: 0px)"
                                name="./paddingLeft"/>
                            <paddingRight
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Padding right (default: 0px)"
                                name="./paddingRight"/>
                            <horizontal-border
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./horizontalBorder"
                                text="Enable/Disable Horizontal Border"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <borderLineStyle
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Specify style of the Border Line"
                                name="./borderLineStyle">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <solid
                                        jcr:primaryType="nt:unstructured"
                                        text="Solid"
                                        value="solid"/>
                                    <dashed
                                        jcr:primaryType="nt:unstructured"
                                        text="Dashed"
                                        value="dashed"/>
                                    <dotted
                                        jcr:primaryType="nt:unstructured"
                                        text="Dotted"
                                        value="dotted"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        text="Image"
                                        value="image"/>
                                </items>
                            </borderLineStyle>
                            <setImage
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="image"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <borderImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="girlscouts/components/form/pathfield"
                                        fieldLabel="Specify border Image"
                                        name="./borderImage"
                                        rootPath="/content/dam/gsusa"/>
                                </items>
                            </setImage>
                            <setDotted
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="dotted"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <borderLineDotted
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify size of the Dotted Border Line (default: 1px)"
                                        name="./borderLineDotted"/>
                                    <borderLineColorDotted
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify color of Dotted Border Line (default: #DDDDDD)"
                                        name="./borderLineColorDotted"/>
                                    <borderLineWidthDotted
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify width of Dotted Border Line (default: 100%)"
                                        name="./borderLineWidthDotted"/>
                                </items>
                            </setDotted>
                            <setDashed
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="dashed"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <borderLineDashed
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify size of the Dashed Border Line (default: 1px)"
                                        name="./borderLineDashed"/>
                                    <borderLineColorDashed
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify color of the Dashed Border Line (default: #DDDDDD)"
                                        name="./borderLineColorDashed"/>
                                    <borderLineWidthDashed
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify width of the Dashed Border Line (default: 100%)"
                                        name="./borderLineWidthDashed"/>
                                </items>
                            </setDashed>
                            <setSolid
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="solid"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <borderLineSolid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify size of the Solid Border Line (default: 1px)"
                                        name="./borderLineSolid"/>
                                    <borderLineColorSolid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify color of the Solid Border Line (default: #DDDDDD)"
                                        name="./borderLineColorSolid"/>
                                    <borderLineWidthSolid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Specify width of the Solid Border Line (default: 100%)"
                                        name="./borderLineWidthSolid"/>
                                </items>
                            </setSolid>
                        </items>
                    </columns>
                </items>
            </tab0>
        </items>
    </content>
</jcr:root>
