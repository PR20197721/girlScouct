<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <general
                jcr:primaryType="cq:Panel"
                title="General" >
                <items jcr:primaryType="cq:WidgetCollection">
                    <desc
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Display Label"
                        fieldDescription="Display Description"
                        name="./displayfield"
                        xtype="displayfield" 
                        />
                    <url
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Endpoint URL"
                        fieldDescription="URL to retrieve Blog data"
                        name="./url"
                        xtype="textfield" 
                        />
                    <count
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify how many posts to display. Will default to 10 if left blank"
                        fieldLabel="Count"
                        minValue="1"
                        name="./count"
                        xtype="numberfield"/>
                    <postid1
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 1"
                    	name="./postid1"
                    	xtype="textfield"/>
                    <postid2
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 2"
                    	name="./postid2"
                    	xtype="textfield"/>
                    <postid3
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 3"
                    	name="./postid3"
                    	xtype="textfield"/>
                </items>
            </general>
            <desktop
                jcr:primaryType="cq:Panel"
                title="Desktop">
                <items jcr:primaryType="cq:WidgetCollection">
                    <desktoptitlefont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Font Size"
                        fieldDescription="Font size for Blog title in Desktop view"
                        defaultValue="15"
                        minValue="0"
                        value="15"
                        name="./desktoptitlefont"
                        xtype="numberfield"/>
                    <desktopsnippetfont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Snippet Font Size"
                        fieldDescription="Font size for Blog snippet in Desktop view"
                        defaultValue="12"
                        value="12"
                        minValue="0"
                        name="./desktopsnippetfont"
                        xtype="numberfield"/>
                    <desktoptitlelines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Lines"
                        fieldDescription="Number of lines of Blog title to show"
                        defaultValue="2"
                        minValue="0"
                        value="2"
                        name="./desktoptitlelines"
                        xtype="numberfield"/>
                    <desktopsnippetlines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Snippet Lines"
                        fieldDescription="Number of lines of Blog snippet to show"
                        defaultValue="3"
                        minValue="0" 
                        value="3"
                        name="./desktopsnippetlines"
                        xtype="numberfield"/>
                </items>
            </desktop>            
            <mobile
                jcr:primaryType="cq:Panel"
                title="Mobile">
                <items jcr:primaryType="cq:WidgetCollection">
                    <mobiletitlefont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Font Size"
                        fieldDescription="Font size for Blog title in Mobile view"
                        defaultValue="16"
                        minValue="1"
                        value="16"
                        name="./mobiletitlefont"
                        xtype="numberfield"/>
                    <mobilesnippetfont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Snippet Font Size"
                        fieldDescription="Font size for Blog snippet in Mobile view"
                        defaultValue="12"
                        minValue="1"
                        value="12"
                        name="./mobilesnippetfont"
                        xtype="numberfield"/>
                    <mobiletitlelines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Lines"
                        fieldDescription="Number of lines of Blog title to show"
                        minValue="0"                        
                        defaultValue="2"
                        value="2"
                        name="./mobiletitlelines"
                        xtype="numberfield"/>
                    <mobilesnippetlines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Snippet Lines"
                        fieldDescription="Number of lines of Blog snippet to show"
                        defaultValue="3"
                        value="3"
                        minValue="0"
                        name="./mobilesnippetlines"
                        xtype="numberfield"/>
                </items>
            </mobile>
        </items>
    </items>
</jcr:root>
