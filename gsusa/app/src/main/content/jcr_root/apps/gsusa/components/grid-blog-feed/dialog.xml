<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <properties
                jcr:primaryType="cq:Panel"
                title="Properties">
                <items jcr:primaryType="cq:WidgetCollection">
                    <url
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Endpoint URL"
                        fieldDescription="URL to retrieve Blog data"
                        name="./url"
                        xtype="textfield" 
                        />
                    <count
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify how many posts to display. Will default to 20 if left blank"
                        fieldLabel="Count"
                        minValue="1"
                        name="./count"
                        xtype="numberfield"/>
                    <postid1
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID"
                    	name="./postid1"
                    	xtype="textfield"/>
                </items>
            </properties>
        </items>
    </items>
</jcr:root>
