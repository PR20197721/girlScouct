<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <general
                jcr:primaryType="cq:Panel"
                title="General" >
                <items jcr:primaryType="cq:WidgetCollection">
                    <endpointurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Endpoint URL"
                        fieldDescription="URL to retrieve Blog data"
                        name="./endpointurl"
                        xtype="textfield" 
                        />
                    <blogurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog URL"
                        fieldDescription="URL of Blog to link See More at the end of feed"
                        name="./blogurl"
                        xtype="textfield" 
                        />
                    <count
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify how many posts to display. Will default to 10 if left blank"
                        fieldLabel="Count"
                        minValue="1"
                        defaultValue="10"
                        value="10"
                        name="./count"
                        xtype="numberfield"/>
                    <postid1
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 1"
                    	name="./postid1"
                    	xtype="textfield"/>
                    <postid2
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 2"
                    	name="./postid2"
                    	xtype="textfield"/>
                    <postid3
                    	jcr:primaryType="cq:Widget"
                    	fieldDescription="If you would like to pin a blog post to the top of the feed, enter its post id here."
                    	fieldLabel="Post ID 3"
                    	name="./postid3"
                    	xtype="textfield"/>
                </items>
            </general>
            <desktop
                jcr:primaryType="cq:Panel"
                title="Desktop">
                <items jcr:primaryType="cq:WidgetCollection">                    
                    <desktopdisplay
                        jcr:primaryType="cq:Widget"
                        value="Styling configuration for desktop view"
                        hideLabel="true"
                        name="./desktopdescription"
                        xtype="displayfield" />
                    <desktopimagesize
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Image Size"
                        fieldDescription="In percentage ex. 30"
                        defaultValue="40"
                        minValue="0"
                        value="40"
                        name="./desktopimagesize"
                        xtype="numberfield"/>
                    <desktoptitlelines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Lines"
                        fieldDescription="Number of lines of Blog title to display. 0 to show all"
                        defaultValue="2"
                        minValue="0"
                        value="2"
                        name="./desktoptitlelines"
                        xtype="numberfield"/>
                    <desktopsnippetlines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Lines"
                        fieldDescription="Number of lines of Blog content to display. 0 to show all"
                        defaultValue="3"
                        minValue="0" 
                        value="3"
                        name="./desktopsnippetlines"
                        xtype="numberfield"/>
                    <desktoptitlefont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Font Size"
                        fieldDescription="Font size for Blog title in Desktop view"
                        defaultValue="17"
                        minValue="0"
                        value="17"
                        name="./desktoptitlefont"
                        xtype="numberfield"/>
                    <desktoptitlelineheight
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Line Height"
                        fieldDescription="Line height size for Blog title in Desktop view"
                        defaultValue="21"
                        minValue="0"
                        value="21"
                        name="./desktoptitlelineheight"
                        xtype="numberfield"/>
                    <desktopsnippetfont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Font Size"
                        fieldDescription="Font size for Blog content in Desktop view"
                        defaultValue="13"
                        value="13"
                        minValue="0"
                        name="./desktopsnippetfont"
                        xtype="numberfield"/>
                    <desktopsnippetlineheight
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Line Height"
                        fieldDescription="Line height size for Blog content in Desktop view"
                        defaultValue="18"
                        minValue="0"
                        value="18"
                        name="./desktopsnippetlineheight"
                        xtype="numberfield"/>
                </items>
            </desktop>            
            <mobile
                jcr:primaryType="cq:Panel"
                title="Mobile">
                <items jcr:primaryType="cq:WidgetCollection">
                    <mobiledisplay
                        jcr:primaryType="cq:Widget"
                        value="Styling configuration for mobile view"
                        hideLabel="true"
                        name="./mobiledescription"
                        xtype="displayfield" />
                    <mobileimagesize
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Image Size"
                        fieldDescription="in percentage"
                        defaultValue="25"
                        minValue="0"
                        value="25"
                        name="./mobileimagesize"
                        xtype="numberfield"/>                    
                    <mobiletitlelines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Lines"
                        fieldDescription="Number of lines of Blog title to show. 0 to show all"
                        minValue="0"                        
                        defaultValue="2"
                        value="2"
                        name="./mobiletitlelines"
                        xtype="numberfield"/>
                    <mobilesnippetlines
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Lines"
                        fieldDescription="Number of lines of Blog content to show. 0 to show all"
                        defaultValue="3"
                        value="3"
                        minValue="0"
                        name="./mobilesnippetlines"
                        xtype="numberfield"/>
                    <mobiletitlefont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Font Size"
                        fieldDescription="Font size for Blog title in mobile view"
                        defaultValue="18"
                        minValue="1"
                        value="18"
                        name="./mobiletitlefont"
                        xtype="numberfield"/>
                    <mobiletitlelineheight
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title Line Height"
                        fieldDescription="Line height for Blog title in mobile view"
                        defaultValue="24"
                        minValue="0"
                        value="24"
                        name="./mobiletitlelineheight"
                        xtype="numberfield"/>
                    <mobilesnippetfont
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Font Size"
                        fieldDescription="Font size for Blog content in mobile view"
                        defaultValue="14"
                        minValue="1"
                        value="14"
                        name="./mobilesnippetfont"
                        xtype="numberfield"/>
                    <mobilesnippetlineheight
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Line Height"
                        fieldDescription="Line height size for Blog content in mobile view"
                        defaultValue="19"
                        minValue="0"
                        value="19"
                        name="./mobilesnippetlineheight"
                        xtype="numberfield"/>
                </items>
            </mobile>
        </items>
    </items>
</jcr:root>
