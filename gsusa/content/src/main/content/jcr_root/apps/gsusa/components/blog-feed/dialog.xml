<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <properties
                jcr:primaryType="cq:Panel"
                title="Properties">
                <items jcr:primaryType="cq:WidgetCollection">
                	<blog-id
						jcr:primaryType="cq:Widget"
						fieldDescription="(Optional) Specify an alternative blog to use by entering its Blogger ID"
						fieldLabel="Blog ID"
						name="./id"
						xtype="textfield"/>
					<api-key
						jcr:primaryType="cq:Widget"
						fieldDescription="(Optional) If you are using an alternative blog, enter its API Key here"
						fieldLabel="API Key"
						name="./key"
						xtype="textfield"/>
                    <count
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify a limit for how many images will appear. Will default to 20 if left blank"
                        fieldLabel="Picture Count"
                        minValue="1"
                        name="./count"
                        xtype="numberfield"/>
                </items>
            </properties>
        </items>
    </items>
</jcr:root>
