<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
            	<properties
	                jcr:primaryType="cq:Panel"
	                title="Properties">
	                <items jcr:primaryType="cq:WidgetCollection">
                        <anchor
                        	jcr:primaryType="cq:Widget"
                            fieldDescription="Enter an anchor for the link. If left blank, no anchor will be used"
                            fieldLabel="Anchor"
                            name="./anchor"
                            xtype="textfield"
                	</items>
            	</properties>
            	<facebook
            		jcr:primaryType="cq:Panel"
	                title="Facebook">
	                <items jcr:primaryType="cq:WidgetCollection">
	                	<fb-title
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Enter the default title for Facebook share message"
                            fieldLabel="Facebook Title"
                            name="./fbTitle"
                            xtype="textfield"/>
	            		<fb-message
		                    jcr:primaryType="cq:Widget"
		                    fieldDescription="Enter the default message for the Facebook share popup. If left blank, Facebook button will be hidden"
		                    fieldLabel="Facebook Default Message"
		                    maxLength="500"
		                    name="./fbMessage"
		                    xtype="textarea"/>
		            </items>
            	</facebook>
            	<facebook-image-tab
                	jcr:primaryType="cq:Widget"
		            ddGroups="[media]"
		            fileNameParameter="./fileName"
		            fileReferenceParameter="./fileReference"
		            name="./regular/file"
		            title="Facebook Image"
		            xtype="html5smartimage">
                    <items jcr:primaryType="cq:WidgetCollection">
	                	<resType
		                    jcr:primaryType="cq:Widget"
		                    ignoreData="{Boolean}true"
		                    name="./sling:resourceType"
		                    value="foundation/components/image"
		                    xtype="hidden"/>
                    </items>
            	</facebook-image-tab>
            	<twitter
            		jcr:primaryType="cq:Panel"
	                title="Twitter">
	                <items jcr:primaryType="cq:WidgetCollection">
	            		<twitter-message
		                	jcr:primaryType="cq:Widget"
		                    fieldDescription="Enter the default message for the Twitter share popup (max 140 characters). If blank, twitter button will be hidden"
		                    fieldLabel="Twitter Message"
		                    maxLength="140"
		                    maxLengthText="Message can not be longer than 140 characters"
		                    name="./twitterMessage"
		                    xtype="textarea"/>
		                <hashtags
		                	jcr:primaryType="cq:Widget"
		                    fieldDescription="Enter hashtags to appear at the end of the message. They will be affected by the 140 character limit. Do not enter the '#' symbol, and separate the hashtags by comma. Don't use any spaces."
		                    fieldLabel="Hashtags"
		                    name="./hashtags"
		                    xtype="textfield"/>
		            </items>
            	</twitter>
        	</items>
        </tabs>
    </items>
</jcr:root>
