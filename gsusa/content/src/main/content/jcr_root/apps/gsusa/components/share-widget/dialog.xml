<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <properties
                    jcr:primaryType="cq:Panel"
                    title="Properties">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <url
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Enter the URL to share. You can use an anchor at the end if you like, e.g. http://girlscouts.org#news. If left blank, the current page will be used"
                            fieldLabel="URL"
                            name="./url"
                            xtype="textfield"/>
                        <title
                            jcr:primaryType="cq:Widget"
                            fieldDescription="If blank, "
                            fieldLabel="Title"
                            name="./title"
                            xtype="textfield"/>
                        <facebook
                            jcr:primaryType="cq:Widget"
                            defaultValue="{Boolean}true"
                            fieldDescription="Check to show Facebook Share Button"
                            fieldLabel="Share via Facebook"
                            name="./facebook"
                            type="checkbox"
                            value="{Boolean}true"
                            xtype="selection"/>
                        <facebook-text
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Enter a message for other social media. You can make this message longer, but it may be cut off depending on the social network's requirements"
                            fieldLabel="Facebook/Pinterest Message"
                            name="./otherMessage"
                            xtype="textarea"/>
                        <twitter
                            jcr:primaryType="cq:Widget"
                            defaultValue="{Boolean}true"
                            fieldDescription="Check to show Tweet Button"
                            fieldLabel="Share via Tweet"
                            name="./tweet"
                            type="checkbox"
                            value="{Boolean}true"
                            xtype="selection"/>
                        <twitter-text
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Enter the message to Tweet (max 140 characters). If blank, Twitter may pull data from page or page metadata"
                            fieldLabel="Twitter Message"
                            maxLength="140"
                            maxLengthText="Message can not be longer than 140 characters"
                            name="./twitterMessage"
                            xtype="textarea"/>
                        <pinterest
                            jcr:primaryType="cq:Widget"
                            defaultValue="{Boolean}true"
                            fieldDescription="Check to show Pinterest Share Button"
                            fieldLabel="Share via Pinterest"
                            name="./pinterest"
                            type="checkbox"
                            value="{Boolean}true"
                            xtype="selection"/>
                        <pinterest-text
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Enter a message for other social media. You can make this message longer, but it may be cut off depending on the social network's requirements"
                            fieldLabel="Facebook/Pinterest Message"
                            name="./otherMessage"
                            xtype="textarea"/>
                    </items>
                </properties>
            </items>
        </tabs>
    </items>
</jcr:root>
