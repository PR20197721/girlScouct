<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configure Search Path">
                <items jcr:primaryType="cq:WidgetCollection">
                    <search-path
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Where will the search results be displayed?"
                        fieldLabel="Search Path"
                        name="./searchPath"
                        xtype="dynamicPathField"/>
                    <placeholder-text
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Text to display within the search bar"
                        fieldLabel="Placeholder Text"
                        name="./placeholder-text"
                        xtype="textfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
