<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Right Rail Carousel"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Content">
                <items jcr:primaryType="cq:WidgetCollection">
                	<carousel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Dynamic Carousel"
                        fieldSubLabel="If this is turned off. Only the first image will be shown."
                        name="./carousel"
                        xtype="checkbox"/>
                    <multi
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Links"
                        hideLabel="{Boolean}true"
                        name="./navs"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            xtype="rightrailcarouselwidget"/>
                    </multi>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <autoScroll
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Auto Scroll"
                        name="./autoscroll"
                        xtype="checkbox"/>
                    <timedelay
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Time Delay of the carousel (in ms)"
                        name="timedelay"
                        xtype="numberfield">
                    </timedelay>
                   
                    
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
