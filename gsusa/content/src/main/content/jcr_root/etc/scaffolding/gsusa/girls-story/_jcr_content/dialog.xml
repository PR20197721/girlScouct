<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Girls Story"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Girls Story">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldDescription="Please input a title"
                        fieldLabel="Title"
                        name="./jcr:content/jcr:title"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Description"
                        name="./jcr:content/description"/>
                    <type
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Type"
                        name="./type"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <option0
                                jcr:primaryType="nt:unstructured"
                                text="Image"
                                value="image"/>
                            <option1
                                jcr:primaryType="nt:unstructured"
                                text="Video"
                                value="video"/>
                            <option2
                                jcr:primaryType="nt:unstructured"
                                text="External Video"
                                value="external-video"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(field, value) {&#xa;&#x9;var imageField = $($('input[name=&quot;./jcr:content/image/fileName&quot;]').parents('.x-form-item')[0]);&#xa;&#x9;var videoField = $($('input[name=&quot;./jcr:content/video&quot;]').parents('.x-form-item')[0]);&#xa;&#x9;var externalVideoField = $($('input[name=&quot;./jcr:content/externalVideo&quot;]').parents('.x-form-item')[0]);&#xa;&#x9;&#xa;&#x9;imageField.hide();&#xa;&#x9;videoField.hide();&#xa;&#x9;externalVideoField.hide();&#xa;&#x9;&#xa;&#x9;if (value === 'image') {&#xa;&#x9;&#x9;imageField.show();&#xa;&#x9;} else if (value === 'video') {&#xa;&#x9;&#x9;videoField.show();&#xa;&#x9;} else if (value === 'external-video') {&#xa;&#x9;&#x9;externalVideoField.show();&#xa;&#x9;}&#xa;}"/>
                    </type>
                    <image
                        jcr:primaryType="cq:Widget"
                        border="true"
                        cropParameter="./jcr:content/image/imageCrop"
                        ddGroups="[media]"
                        fileNameParameter="./jcr:content/image/fileName"
                        fileReferenceParameter="./jcr:content/image/fileReference"
                        height="400"
                        hideLabel="false"
                        mapParameter="./jcr:content/image/imageMap"
                        name="./jcr:content/image/file"
                        requestSuffix="/jcr:content/image.img.png"
                        rotateParameter="./jcr:content/image/imageRotate"
                        sizeLimit="100"
                        xtype="html5smartimage">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <resType
                                jcr:primaryType="cq:Widget"
                                name="./jcr:content/image/sling:resourceType"
                                value="foundation/components/image"
                                xtype="hidden"/>
                        </items>
                    </image>
                    <external-video
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        fieldLabel="Video Link"
                        name="./jcr:content/externalVideo"/>
                    <video
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        fieldLabel="Video Path"
                        name="./jcr:content/video"
                        rootPath="/content/dam/girlscouts-gsusa/"
                        xtype="pathfield"/>
                </items>
            </tab1>
            <advanced
                jcr:primaryType="cq:Widget"
                title="Advanced"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./jcr:content/image/jcr:title"
                        xtype="textfield"/>
                    <alt
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(leave empty to use the title defined above)"
                        fieldLabel="Alt Text"
                        name="./jcr:content/image/alt"
                        xtype="textfield"/>
                    <linkURL
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Drop files or pages from the Content Finder"
                        fieldLabel="Link to"
                        name="./jcr:content/image/linkURL"
                        xtype="pathfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./jcr:content/image/jcr:description"
                        xtype="textarea"/>
                    <size
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Size"
                        heightParameter="./jcr:content/image/height"
                        widthParameter="./jcr:content/image/width"
                        xtype="sizefield"/>
                </items>
            </advanced>
        </items>
    </items>
</jcr:root>
