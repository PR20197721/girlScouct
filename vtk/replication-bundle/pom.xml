                                                        !org.objectweb.asm.*,
                                                        !net.spy.memcached,
                                                        !sun.io.*,
							!org.ietf.jgss,
							!sun.misc,
org.apache.felix.http.*,
!org.hibernate.*,
org.json,
org.mozilla.javascript.*,
org.joda.time.*,
!org.dom4j.*,
!com.fasterxml.*,
!com.sun.jdi.*,
