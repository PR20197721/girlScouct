<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- ====================================================================== -->
    <!-- P A R E N T P R O J E C T D E S C R I P T I O N -->
    <!-- ====================================================================== -->
    <parent>
        <groupId>org.girlscouts.aem</groupId>
        <artifactId>vtk</artifactId>
        <version>4.0.36-SNAPSHOT</version>
    </parent>
    <!-- ====================================================================== -->
    <!-- P R O J E C T D E S C R I P T I O N -->
    <!-- ====================================================================== -->
    <groupId>org.girlscouts.aem.vtk</groupId>
    <artifactId>girlscouts-vtk-app</artifactId>
    <packaging>content-package</packaging>
    <name>Girl Scouts VTK App Package</name>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>girlscouts-vtk-scaffolding</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>girlscouts-vtk-bundle</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>girlscouts-vtk-replication</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>modified-checker</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ical4j-wrapper</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>google-collections-wrapper</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>beanutils-wrapper</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>4.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.8.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.sling</groupId>
            <artifactId>org.apache.sling.event</artifactId>
            <version>4.2.8</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/content/jcr_root</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/.vlt</exclude>
                    <exclude>**/.vltignore</exclude>
                    <exclude>**/*.scss</exclude>
                    <exclude>**/*.scssc</exclude>
                    <exclude>**/.sass-cache</exclude>
                    <exclude>**/node_modules/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${project.build.directory}/scss-gen-css</directory>
                <targetPath>../vault-work/jcr_root/etc/designs/girlscouts-vtk/clientlibs/css</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/typescript-gen-js</directory>
                <targetPath>../vault-work/jcr_root/etc/designs/girlscouts-vtk/clientlibs/js</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>nl.geodienstencentrum.maven</groupId>
                <artifactId>sass-maven-plugin</artifactId>
                <version>3.7.1</version>
                <executions>
                    <execution>
                        <id>build</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>update-stylesheets</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <destination>${project.build.directory}/scss-gen-css</destination>
                    <sassSourceDirectory>${project.basedir}/src/main/scss/vtk</sassSourceDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <includeEmptyDirs>true</includeEmptyDirs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.day.jcr.vault</groupId>
                <artifactId>content-package-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <group>Girl Scouts</group>
                    <filterSource>src/main/content/META-INF/vault/filter.xml</filterSource>
                    <embeddeds>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>girlscouts-vtk-scaffolding</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>girlscouts-vtk-bundle</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>girlscouts-vtk-replication</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>ical4j-wrapper</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>com.itextpdf</groupId>
                            <artifactId>itextpdf</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>com.itextpdf.tool</groupId>
                            <artifactId>xmlworker</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>beanutils-wrapper</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>google-collections-wrapper</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>com.github.livesense</groupId>
                            <artifactId>org.liveSense.fragment.sun.misc</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>modified-checker</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>net.sourceforge.jexcelapi</groupId>
                            <artifactId>jxl</artifactId>
                            <target>/apps/girlscouts-vtk/install</target>
                        </embedded>
                        <embedded>
                            <groupId>org.codehaus.jackson</groupId>
                            <artifactId>jackson-mapper-asl</artifactId>
                        </embedded>
                    </embeddeds>
                    <targetURL>http://${crx.host}:${crx.port}/crx/packmgr/service.jsp</targetURL>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>install-node-and-npm</id>
                        <goals><goal>install-node-and-npm</goal></goals>
                        <phase>generate-resources</phase>
                    </execution>
                    <execution>
                        <id>npm-install-vtk-yp</id>
                        <goals><goal>npm</goal></goals>
                        <configuration>
                            <arguments>-prefix src/main/typescript/vtk-yp/ install</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>webpack-build-vtk-yp</id>
                        <goals><goal>npm</goal></goals>
                        <configuration>
                            <arguments>-prefix src/main/typescript/vtk-yp/ run build</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm-install-vtk-mtg-plan</id>
                        <goals><goal>npm</goal></goals>
                        <configuration>
                            <arguments>-prefix src/main/typescript/vtk-mtg-plan/ install</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>webpack-build-vtk-mtg-plan</id>
                        <goals><goal>npm</goal></goals>
                        <configuration>
                            <arguments>-prefix src/main/typescript/vtk-mtg-plan/ run build</arguments>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <nodeVersion>v11.9.0</nodeVersion>
                    <npmVersion>6.5.0</npmVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>noApi</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <group>Girl Scouts</group>
                            <filterSource>src/main/content/META-INF/vault/filter.xml</filterSource>
                            <embeddeds>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>girlscouts-vtk-scaffolding</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>girlscouts-vtk-bundle</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>girlscouts-vtk-replication</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>ical4j-wrapper</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>com.itextpdf</groupId>
                                    <artifactId>itextpdf</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>com.itextpdf.tool</groupId>
                                    <artifactId>xmlworker</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>beanutils-wrapper</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>google-collections-wrapper</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>com.github.livesense</groupId>
                                    <artifactId>org.liveSense.fragment.sun.misc</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>modified-checker</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>net.sourceforge.jexcelapi</groupId>
                                    <artifactId>jxl</artifactId>
                                    <target>/apps/girlscouts-vtk/install</target>
                                </embedded>
                                <embedded>
                                    <groupId>org.codehaus.jackson</groupId>
                                    <artifactId>jackson-mapper-asl</artifactId>
                                </embedded>
                            </embeddeds>
                            <targetURL>http://${crx.host}:${crx.port}/crx/packmgr/service.jsp</targetURL>
                            <username>${crx.username}</username>
          					<password>${crx.password}</password>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>autoInstallPackage</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-content-package</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>autoInstallPackagePublish</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-content-package-publish</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                                <configuration>
                                    <targetURL>http://${publish.crx.host}:${publish.crx.port}/crx/packmgr/service.jsp
                                    </targetURL>
                                    <username>${publish.crx.username}</username>
                                    <password>${publish.crx.password}</password>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
