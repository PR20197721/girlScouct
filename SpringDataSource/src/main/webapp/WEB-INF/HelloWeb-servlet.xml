    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="myDataSource"/>
        <property name="mappingResources">
            <list>
                <!-- value>Product.hbm.xml</value -->
            </list>
        </property>
        <property name="annotatedClasses">
            <list>
                <!-- value>com.gs.vtk.Player</value -->
                <!-- value>org.girlscouts.vtk.models.Achievement</value -->
                <value>org.girlscouts.vtk.models.Activity</value>
                <!-- value>org.girlscouts.vtk.models.Asset</value -->
                <!-- value>org.girlscouts.vtk.models.Attendance</value -->
                <!--  value>org.girlscouts.vtk.models.Cal</value -->
                <!-- value>org.girlscouts.vtk.models.Contact</value -->
                <!-- value>org.girlscouts.vtk.models.CouncilInfo</value -->
                <value>org.girlscouts.vtk.models.Council</value>
                <!-- value>org.girlscouts.vtk.models.Finance</value -->
