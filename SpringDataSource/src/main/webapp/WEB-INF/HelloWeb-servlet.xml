                <value>org.girlscouts.vtk.models.MeetingE</value>
                <value>org.girlscouts.vtk.models.Milestone</value>
                <!-- value>org.girlscouts.vtk.models.Note</value -->
                <!-- value>org.girlscouts.vtk.models.SentEmail</value -->
                <value>org.girlscouts.vtk.models.Troop</value>
                <value>org.girlscouts.vtk.models.YearPlan</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <value>
                hibernate.dialect=org.hibernate.dialect.MySQLDialect
                hibernate.show_sql=true
                hibernate.hbm2ddl.auto =create
            </value>
        </property>
    </bean>
    
   
        <!-- SessionFactory, DataSource, etc. omitted -->

    <bean id="transactionManager"
            class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>


    <bean id="mySessionFactory1"
            class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="myDataSource"/>
        <property name="mappingResources">
            <list>
                <value>Product.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <value>
                hibernate.dialect=org.hibernate.dialect.MySQLDialect
                hibernate.show_sql=true
            </value>
        </property>
    </bean>

    <bean id="myProductDao" class="com.gs.vtk.dao.ProductDaoImpl">
        <property name="sessionFactory" ref="mySessionFactory1"/>
    </bean>

    <bean id="myProductService" class="com.gs.vtk.service.ProductServiceImpl">
        <property name="productDao" ref="myProductDao"/>
    </bean>

</beans>