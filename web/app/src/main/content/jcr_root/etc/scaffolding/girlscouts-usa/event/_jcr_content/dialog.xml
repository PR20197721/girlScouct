<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="0"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Panel"
            title="Text">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Title"
                    name="./jcr:content/jcr:title"/>
                <start
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Start Date"
                    name="./jcr:content/data/start"
                    xtype="datetime"/>
                <end
                    jcr:primaryType="cq:Widget"
                    fieldLabel="End Date"
                    name="./jcr:content/data/end"
                    xtype="datetime"/>
                <location
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Location"
                    name="./jcr:content/data/location"
                    rootPath="/content/girlscouts-usa/en/locations"
                    xtype="pathfield"/>
                <details
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Text"
                    name="./jcr:content/data/details"
                    xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <table
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <format
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <lists
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <justify
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <edit
                            jcr:primaryType="nt:unstructured"
                            features="[paste-wordhtml]"/>
                        <findreplace
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <paraformat
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <subsuperscript
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <misctools
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <links
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <spellcheck
                            jcr:primaryType="nt:unstructured"
                            features="*"
                            invalidStyle="background-color: #ffdddd;"/>
                        <undo
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <image
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                    </rtePlugins>
                </details>
                <srchdisp
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Search Discription"
                    name="./jcr:content/data/srchdisp"/>
            </items>
        </tab1>
        <tab4
            jcr:primaryType="cq:Panel"
            title="Tags/Keywords">
            <items jcr:primaryType="cq:WidgetCollection">
                <tags
                    jcr:primaryType="cq:Widget"
                    name="./jcr:content/cq:tags"
                    xtype="tags"/>
            </items>
        </tab4>
        <tab2
            jcr:primaryType="cq:Panel"
            title="Image">
            <items jcr:primaryType="cq:WidgetCollection">
                <image
                    jcr:primaryType="cq:Widget"
                    border="true"
                    cropParameter="./jcr:content/data/image/imageCrop"
                    ddGroups="[media]"
                    fileNameParameter="./jcr:content/data/image/fileName"
                    fileReferenceParameter="./jcr:content/data/image/fileReference"
                    height="400"
                    hideLabel="false"
                    mapParameter="./jcr:content/data/image/imageMap"
                    name="./jcr:content/data/image/file"
                    requestSuffix="/jcr:content/data/image.img.png"
                    rotateParameter="./jcr:content/data/image/imageRotate"
                    sizeLimit="100"
                    xtype="html5smartimage">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <resType
                            jcr:primaryType="cq:Widget"
                            name="./jcr:content/data/image/sling:resourceType"
                            value="foundation/components/image"
                            xtype="hidden"/>
                    </items>
                </image>
            </items>
        </tab2>
        <tab3
            jcr:primaryType="cq:Panel"
            title="Image / Advanced">
            <items jcr:primaryType="cq:WidgetCollection">
                <alt
                    jcr:primaryType="cq:Widget"
                    fieldDescription="(leave empty to use the title defined above)"
                    fieldLabel="Alt Text"
                    name="./jcr:content/data/image/alt"
                    xtype="textfield"/>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./jcr:content/data/image/height"
                    widthParameter="./jcr:content/data/image/width"
                    xtype="sizefield"/>
            </items>
        </tab3>
    </items>
</jcr:root>
