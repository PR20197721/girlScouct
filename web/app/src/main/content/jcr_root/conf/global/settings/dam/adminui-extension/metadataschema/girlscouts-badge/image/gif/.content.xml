<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="sling:Folder"
    jcr:title="gif">
    <jcr:content jcr:primaryType="nt:unstructured"/>
    <items jcr:primaryType="nt:unstructured">
        <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs"
            size="L">
            <items jcr:primaryType="nt:unstructured">
                <tab1
                    granite:rel="aem-assets-metadata-form-tab"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Badge"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    listOrder="0">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        tabid="065a80fb-ec2b-46d4-8d8d-db448b9cff45"/>
                    <items jcr:primaryType="nt:unstructured">
                        <col1
                            granite:rel="aem-assets-metadata-form-column"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            listOrder="0">
                            <items jcr:primaryType="nt:unstructured">
                                <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./jcr:content/metadata/dc:title"
                                    required="{Boolean}true">
                                    <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        metaType="text"/>
                                </title>
                                <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                    customStart="false"
                                    fieldLabel="Description"
                                    name="./jcr:content/metadata/adobe_dam:restrictions"
                                    renderReadOnly="true"
                                    height="{Long}300" 
                                    useFixedInlineToolbar="true">
                                    <rtePlugins jcr:primaryType="nt:unstructured"
										sling:resourceSuperType="girlscouts/components/richtext-config/rtePlugins" />
									<specialCharsConfig jcr:primaryType="nt:unstructured"
										sling:resourceSuperType="girlscouts/components/richtext-config/specialCharsConfig" />
									<uiSettings jcr:primaryType="nt:unstructured"
										sling:resourceSuperType="girlscouts/components/richtext-config/uiSettings" />
                                    <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        metaType="text"/>
                                </description>
                                <link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Link"
                                    name="./jcr:content/metadata/dc:description">
                                    <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        metaType="text"/>
                                </link>
                                <tags
                                    cq:showOnCreate="{Boolean}true"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/common/tagspicker"
                                    allowCreate="{Boolean}true"
                                    cq-msm-lockable="cq:tags"
                                    fieldLabel="Tags"
                                    metaType="tags"
                                    name="./jcr:content/metadata/cq:tags"/>
                            </items>
                        </col1>                   
                    </items>
                </tab1>
            </items>
        </tabs>
    </items>
</jcr:root>
