<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    helpPath="en/cq/current/wcm/default_components.html#Image"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            title="Feature Short Story"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Title"
                    name="./title"
                    xtype="textfield"/>
                <pathfield
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldLabel="Title Link"
                    name="./pathfield"
                    xtype="pathfield"/>
                <shortdesc
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    name="./shortdesc"
                    xtype="richtext"/>
                <imageOnLeft
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The story images is by default on the right. Check this to display it on the left."
                    fieldLabel="Image On Left"
                    name="./imageOnLeft"
                    xtype="checkbox"/>
                <springboard
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Spring Broad Display"
                    name="./isspringboard"
                    xtype="checkbox"/>
            </items>
        </tab1>
        <featureiconimage
            jcr:primaryType="cq:Widget"
            cropParameter="./imageCrop"
            ddGroups="[media]"
            fileNameParameter="./fileName"
            fileReferenceParameter="./featureiconimage"
            mapParameter="./imageMap"
            name="./file"
            requestSuffix=".img.png"
            rotateParameter="./imageRotate"
            title="Feature Icon Image"
            xtype="html5smartimage"/>
        <image
            jcr:primaryType="cq:Widget"
            cropParameter="./imageCrop"
            ddGroups="[media]"
            fileNameParameter="./fileName"
            fileReferenceParameter="./fileReference"
            mapParameter="./imageMap"
            name="./file"
            requestSuffix=".img.png"
            rotateParameter="./imageRotate"
            title="Image"
            xtype="html5smartimage"/>
        <advanced
            jcr:primaryType="cq:Widget"
            title="Image Properties"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Image Title"
                    name="./imgtitle"
                    xtype="textfield"/>
                <alt
                    jcr:primaryType="cq:Widget"
                    fieldDescription="(leave empty to use the title defined above)"
                    fieldLabel="Alt Text"
                    name="./alt"
                    xtype="textfield"/>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./height"
                    widthParameter="./width"
                    xtype="sizefield"/>
            </items>
        </advanced>
    </items>
</jcr:root>
