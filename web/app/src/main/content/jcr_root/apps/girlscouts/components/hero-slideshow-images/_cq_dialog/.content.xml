<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Image">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <advanced
                jcr:primaryType="nt:unstructured"
                jcr:title="Advanced"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sort-order
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="(Select sort order of this banner)"
                                fieldLabel="Sort Order"
                                name="./sortOrder"
                                value="">
                                <items jcr:primaryType="nt:unstructured">
                                    <zero
                                        jcr:primaryType="nt:unstructured"
                                        text="Not Assigned"
                                        value=""/>
                                    <one
                                        jcr:primaryType="nt:unstructured"
                                        text="1"
                                        value="1"/>
                                    <two
                                        jcr:primaryType="nt:unstructured"
                                        text="2"
                                        value="2"/>
                                    <three
                                        jcr:primaryType="nt:unstructured"
                                        text="3"
                                        value="3"/>
                                    <four
                                        jcr:primaryType="nt:unstructured"
                                        text="4"
                                        value="4"/>
                                    <five
                                        jcr:primaryType="nt:unstructured"
                                        text="5"
                                        value="5"/>
                                    <six
                                        jcr:primaryType="nt:unstructured"
                                        text="6"
                                        value="6"/>
                                    <seven
                                        jcr:primaryType="nt:unstructured"
                                        text="7"
                                        value="7"/>
                                    <eight
                                        jcr:primaryType="nt:unstructured"
                                        text="8"
                                        value="8"/>
                                </items>
                            </sort-order>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="(Leave empty to use the title defined above)"
                                fieldLabel="Alt Text"
                                name="./alt"/>
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Drop files or pages from the Content Finder"
                                fieldLabel="Link to"
                                name="./linkURL"/>
                            <regular-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                fieldLabel="Regular Size">                            
                                <width
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./regular/width"/>
                                <height
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./regular/height"/>
                            </regular-size>
                            <medium-screen-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                fieldLabel="Medium Screen Size">
                                <width
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./medium/width"/>
                                <height
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./medium/height"/>
                            </medium-screen-size>
                            <small-screen-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                fieldLabel="Small Screen Size">
                                <width
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./small/width"/>
                                <height
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    name="./small/height"/>
                            </small-screen-size>
                            <newWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./newWindow"
                                text="Open In New Window"/>
                            <newwindow-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./newWindow@Delete"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </advanced>
            <regular-image
                jcr:primaryType="nt:unstructured"
                jcr:title="Regular Image"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        	<imagesize jcr:primaryType="nt:unstructured" name="./regular/imagesize"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden" value="regular" />
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Image asset"
                                fileNameParameter="./regular/fileName"
                                fileReferenceParameter="./regular/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./regular/file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </regular-image>
            <medium-screen-image
                jcr:primaryType="nt:unstructured"
                jcr:title="Medium Screen Image"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        	<imagesize jcr:primaryType="nt:unstructured" name="./medium/imagesize"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden" value="medium" />
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Image asset"
                                fileNameParameter="./medium/fileName"
                                fileReferenceParameter="./medium/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./medium/file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </medium-screen-image>
            <small-screen-image
                jcr:primaryType="nt:unstructured"
                jcr:title="Small Screen Image"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        	<imagesize jcr:primaryType="nt:unstructured" name="./small/imagesize"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden" value="small" />
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Image asset"
                                fileNameParameter="./small/fileName"
                                fileReferenceParameter="./small/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./small/file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </small-screen-image>
        </items>
    </content>
</jcr:root>
