<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Event Calendar"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Event Calendar">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <radioGroup jcr:primaryType="nt:unstructured"
                                text="Show past events?"
                                sling:resourceType="granite/ui/components/foundation/form/radiogroup">
                        <items jcr:primaryType="nt:unstructured">
                            <none jcr:primaryType="nt:unstructured"
                                        name="./pastevents"
                                        text="No"
                                        value="none"
                                        sling:resourceType="granite/ui/components/foundation/form/radio"/>
                            <current-year jcr:primaryType="nt:unstructured"
                                       name="./pastevents"
                                       text="Events from the current year"
                                       value="current"
                                       sling:resourceType="granite/ui/components/foundation/form/radio"/>
                            <past-year jcr:primaryType="nt:unstructured"
                                       name="./pastevents"
                                       text="Events from the past year"
                                       value="one"
                                       sling:resourceType="granite/ui/components/foundation/form/radio"/>
                            <past-two-year jcr:primaryType="nt:unstructured"
                                       name="./pastevents"
                                       text="Events from the past two years"
                                       value="two"
                                       sling:resourceType="granite/ui/components/foundation/form/radio"/>
                        </items>
                    </radioGroup>
                    <css-styles
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Css Classes"
                        name="./additionalCss"/>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
