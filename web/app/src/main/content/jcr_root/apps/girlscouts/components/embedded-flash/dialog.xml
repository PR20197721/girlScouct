<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Embedded Flash">
                <items jcr:primaryType="cq:WidgetCollection">
                    <path
                        jcr:primaryType="cq:Widget"
                        fieldLabel="SWF File"
                        rootPath="/content/dam"
                        name="./path"
                        xtype="pathfield"/>
                    <width
                    	jcr:primaryType="cq:Widget"
                    	fieldLabel="Width (specify px or %)"
                    	fieldDescription="Defaults to 100%"
                    	name="./width"
                    	xtype="textfield"/>
                    <height
                    	jcr:primaryType="cq:Widget"
                    	fieldLabel="Height (specify px or %)"
                    	fieldDescription="Defaults to 100%, but is not guaranteed to scale properly"
                    	name="./height"
                    	xtype="textfield"/>
                    <scale
                    	jcr:primaryType="cq:Widget"
                    	fieldLabel="Scaling Type"
                    	name="./scale"
                    	type="select"
                    	value="default"
                    	defaultValue="default"
                    	xtype="selection">
                    		<options jcr:primaryType="cq:WidgetCollection">
                    			<default
                    				jcr:primaryType="nt:unstructured"
                    				text="Default"
                    				value="default"/>
                    			<exactFit
                    				jcr:primaryType="nt:unstructured"
                    				text="Exact Fit"
                    				value="exactFit"/>
                    			<noScale
                    				jcr:primaryType="nt:unstructured"
                    				text="No Scale"
                    				value="noScale"/>
                    		</options>	
                    </scale>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
