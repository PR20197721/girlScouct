<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    title="Hero Slideshow Images"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Widget"
            title="Hero Image and Details"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <images
                    jcr:primaryType="cq:Widget"
                    border="false"
                    name="./images"
                    xtype="imagemultifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        border="false"
                        layout="form"
                        xtype="imagemultifieldpanel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <imgurl
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image Link"
                                name="./imgurl"
                                width="500"
                                xtype="dynamicPathField"/>
                            <regularimage
                                jcr:primaryType="cq:Widget"
                                ddGroups="[media]"
                                fieldLabel="Regular Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                height="250"
                                imageSlingResourceType="foundation/components/parbase"
                                name="./image"
                                sizeLimit="100"
                                xtype="imagemultifieldsmartimage"/>
                            <small-screen-image
                                jcr:primaryType="cq:Widget"
                                ddGroups="[media]"
                                fieldLabel="Small Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./small-image/fileReference"
                                height="250"
                                imageSlingResourceType="foundation/components/parsys"
                                name="./small-image/smallimage"
                                sizeLimit="100"
                                xtype="smrtimage"/>
                            <medium-screen-image
                                jcr:primaryType="cq:Widget"
                                ddGroups="[media]"
                                fieldLabel="Medium Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./medium/fileReference"
                                height="250"
                                imageSlingResourceType="foundation/components/parsys"
                                name="./medium-image/mediumimage"
                                sizeLimit="100"
                                xtype="smrtimage"/>
                        </items>
                    </fieldConfig>
                </images>
            </items>
        </basic>
        <imagescrolltimer
            jcr:primaryType="cq:Widget"
            title="Image Scroll Timer"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <imgscrolltimer
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Image Scroll Timer"
                    name="./imgtimer"
                    xtype="textarea"/>
            </items>
        </imagescrolltimer>
    </items>
</jcr:root>
