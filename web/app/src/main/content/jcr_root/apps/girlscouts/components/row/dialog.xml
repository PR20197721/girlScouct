<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    warnIfModified="{Boolean}false"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <grid
                jcr:primaryType="cq:Widget"
                title="Grid System"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <large-columns
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="How many columns in a row in large pages."
                        fieldLabel="Columns (Large)"
                        name="./largeColumns"
                        value="4"
                        xtype="numberfield"/>
                    <medium-columns
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="How many columns in a row in medium pages."
                        fieldLabel="Columns (Medium)"
                        name="./mediumColumns"
                        value="2"
                        xtype="numberfield"/>
                    <small-columns
                        jcr:primaryType="cq:Widget"
                        allowDecimals="{Boolean}false"
                        allowNegative="{Boolean}false"
                        fieldDescription="How many columns in a row in small pages."
                        fieldLabel="Columns (Small)"
                        name="./smallColumns"
                        value="1"
                        xtype="numberfield"/>
                </items>
            </grid>
            <styles
                jcr:primaryType="cq:Widget"
                title="Styles"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <additional-css
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Separated by spaces. CSS tags will be added to the row itself."
                        fieldLabel="Row CSS"
                        name="./additionalCss"
                        xtype="textfield"/>
                    <cssClasses
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Separated by spaces. CSS tags will be added to all children components."
                        fieldLabel="Children CSS"
                        name="./cssClasses"
                        xtype="textfield"/>
                </items>
            </styles>
        </items>
    </items>
</jcr:root>
