<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Panel"
            title="Properties">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:content/jcr:title"/>
            </items>
        </tab1>
        <tab2
            jcr:primaryType="cq:Panel"
            title="Image">
            <items jcr:primaryType="cq:WidgetCollection">
                <image
                    jcr:primaryType="cq:Widget"
                    border="true"
                    cropParameter="./jcr:content/image/imageCrop"
                    ddGroups="[media]"
                    fileNameParameter="./jcr:content/image/fileName"
                    fileReferenceParameter="./jcr:content/image/fileReference"
                    height="400"
                    hideLabel="false"
                    mapParameter="./jcr:content/image/imageMap"
                    name="./jcr:content/image/file"
                    requestSuffix="/jcr:content/image.img.png"
                    rotateParameter="./jcr:content/image/imageRotate"
                    sizeLimit="100"
                    xtype="html5smartimage">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <resType
                            jcr:primaryType="cq:Widget"
                            name="./jcr:content/image/sling:resourceType"
                            value="girlscouts/components/image"
                            xtype="hidden"/>
                    </items>
                </image>
            </items>
        </tab2>
        <tab3
            jcr:primaryType="cq:Panel"
            title="Text">
            <items jcr:primaryType="cq:WidgetCollection">
                <text
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Text"
                    name="./jcr:content/text/text"
                    xtype="richtext"/>
                <path
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Link"
                    name="./jcr:content/link"
                    xtype="pathfield"/>
                <newWindow
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Open In New Window"
                    name="./jcr:content/newWindow"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </tab3>
        <tab4
            jcr:primaryType="cq:Panel"
            title="Pages to Display">
            <items jcr:primaryType="cq:WidgetCollection">
                <radioButton
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Display Choice"
                    name="./jcr:content/text/radioButtonSelection"
                    type="radio"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <button1
                            jcr:primaryType="nt:unstructured"
                            text="Show this ad on only below pages. No entry will force the ad to show on all pages."
                            value="show"/>
                        <button2
                            jcr:primaryType="nt:unstructured"
