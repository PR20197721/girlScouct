<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_search_v1"
    title="Search">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configure Search Path">
                <items jcr:primaryType="cq:WidgetCollection">
                    <noResultsText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="No results text"
                        name="./noResultsText"
                        xtype="textarea"/>
                    <searchIn
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Default Search location /content/&amp;lt;councilname&amp;gt;/en/)"
                        fieldLabel="Path to search content"
                        name="./searchIn"
                        xtype="pathfield"/>
                    <docsrchpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Default /content/dam/girlscouts-&amp;lt;councilname&amp;gt;/documents)"
                        fieldLabel="Path to search documents"
                        name="./docusrchpath"
                        xtype="pathfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Design ">
                <items jcr:primaryType="cq:WidgetCollection">
                    <css-styles
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Provide the css design)"
                        fieldLabel="Css Styles"
                        name="./additionalCss"
                        xtype="textfield"/>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
