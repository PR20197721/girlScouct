<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Event Push Workflow"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="nt:unstructured"
            title="Title"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Label as displayed in left column. Leave empty for default title."
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <buttonlabel
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Leave empty for default title 'Start Workflow'."
                    fieldLabel="Button label"
                    name="./buttonLabel"
                    xtype="textfield"/>
            </items>
        </first>
        <second
            jcr:primaryType="nt:unstructured"
            title="Workflow"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <workflow
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    displayField="label"
                    editable="{Boolean}false"
                    fieldDescription="Please select a workflow model with a subscription process step."
                    fieldLabel="Workflow Model"
                    hiddenName="./workflow"
                    name="./workflow"
                    selectOnFocus="{Boolean}true"
                    title="Available Workflows"
                    triggerAction="all"
                    valueField="wid"
                    xtype="combo">
                    <store
                        jcr:primaryType="nt:unstructured"
                        root="workflows"
                        totalProperty="results"
                        xtype="jsonstore">
                        <api jcr:primaryType="nt:unstructured">
                            <read
                                jcr:primaryType="nt:unstructured"
                                method="GET"
                                url="/libs/cq/workflow/content/console/workflows.json"/>
                        </api>
                        <fields jcr:primaryType="cq:WidgetCollection">
                            <wid
                                jcr:primaryType="nt:unstructured"
                                name="wid"/>
                            <label
                                jcr:primaryType="nt:unstructured"
                                name="label"/>
                        </fields>
                    </store>
                </workflow>
                <targets
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The entries must point to a calendar component inside a page. They will be labeled with the page's title."
                    fieldLabel="Target calendars"
                    name="./targets"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="nt:unstructured"
                        predicate="nosystem"
                        rootPath="/"
                        showTitlesInTree="false"
                        xtype="pathfield"/>
                </targets>
            </items>
        </second>
    </items>
</jcr:root>
